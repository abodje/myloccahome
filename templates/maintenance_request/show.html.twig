{% extends 'base.html.twig' %}

{% block title %}Demande #{{ maintenanceRequest.id }} - {{ maintenanceRequest.title }}{% endblock %}

{% block body %}
<div class="p-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h1 class="h2">
            <i class="bi bi-tools me-2"></i>
            Demande #{{ maintenanceRequest.id }}
            {% if maintenanceRequest.priority == 'urgent' %}
                <span class="badge bg-danger ms-2">Urgent</span>
            {% elseif maintenanceRequest.status == 'completed' %}
                <span class="badge bg-success ms-2">Terminé</span>
            {% elseif maintenanceRequest.status == 'in_progress' %}
                <span class="badge bg-warning ms-2">En cours</span>
            {% else %}
                <span class="badge bg-info ms-2">En attente</span>
            {% endif %}
        </h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group me-2">
                {% if maintenanceRequest.status == 'pending' %}
                <button type="button" class="btn btn-outline-warning" data-bs-toggle="modal" data-bs-target="#startModal">
                    <i class="bi bi-play-circle me-1"></i>Démarrer
                </button>
                {% elseif maintenanceRequest.status == 'in_progress' %}
                <button type="button" class="btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#completeModal">
                    <i class="bi bi-check-circle me-1"></i>Terminer
                </button>
                {% endif %}
                <a href="{{ path('app_maintenance_request_edit', {id: maintenanceRequest.id}) }}" class="btn btn-outline-secondary">
                    <i class="bi bi-pencil me-1"></i>Modifier
                </a>
                <a href="{{ path('app_maintenance_request_index') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i>Retour
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Informations principales -->
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">{{ maintenanceRequest.title }}</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-muted">Propriété concernée</h6>
                            <div class="d-flex align-items-start mb-3">
                                <i class="bi bi-building me-2 mt-1 text-muted"></i>
                                <div>
                                    <a href="{{ path('app_property_show', {id: maintenanceRequest.property.id}) }}" class="text-decoration-none">
                                        <strong>{{ maintenanceRequest.property.title }}</strong>
                                    </a>
                                    <br>
                                    <small class="text-muted">{{ maintenanceRequest.property.fullAddress }}</small>
                                </div>
                            </div>

                            <h6 class="text-muted">Description du problème</h6>
                            <p class="mb-3">{{ maintenanceRequest.description|nl2br }}</p>

                            <h6 class="text-muted">Catégorie et priorité</h6>
                            <div class="mb-3">
                                <span class="badge bg-light text-dark me-2">{{ maintenanceRequest.category|title }}</span>
                                {% if maintenanceRequest.priority == 'urgent' %}
                                    <span class="badge bg-danger">Urgente</span>
                                {% elseif maintenanceRequest.priority == 'high' %}
                                    <span class="badge bg-warning">Haute</span>
                                {% elseif maintenanceRequest.priority == 'medium' %}
                                    <span class="badge bg-info">Moyenne</span>
                                {% else %}
                                    <span class="badge bg-secondary">Basse</span>
                                {% endif %}
                            </div>
                        </div>

                        <div class="col-md-6">
                            <h6 class="text-muted">Statut et planning</h6>
                            <div class="mb-3">
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Statut actuel :</span>
                                    {% if maintenanceRequest.status == 'completed' %}
                                        <span class="badge bg-success">Terminé</span>
                                    {% elseif maintenanceRequest.status == 'in_progress' %}
                                        <span class="badge bg-warning">En cours</span>
                                    {% elseif maintenanceRequest.status == 'cancelled' %}
                                        <span class="badge bg-secondary">Annulé</span>
                                    {% else %}
                                        <span class="badge bg-info">En attente</span>
                                    {% endif %}
                                </div>

                                <div class="d-flex justify-content-between mb-2">
                                    <span>Créé le :</span>
                                    <span class="fw-bold">{{ maintenanceRequest.createdAt|date('d/m/Y à H:i') }}</span>
                                </div>

                                {% if maintenanceRequest.scheduledDate %}
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Intervention prévue :</span>
                                    <span class="fw-bold {{ maintenanceRequest.scheduledDate < date() and maintenanceRequest.status != 'completed' ? 'text-danger' : '' }}">
                                        {{ maintenanceRequest.scheduledDate|date('d/m/Y à H:i') }}
                                    </span>
                                </div>
                                {% endif %}

                                {% if maintenanceRequest.completedDate %}
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Terminé le :</span>
                                    <span class="fw-bold text-success">{{ maintenanceRequest.completedDate|date('d/m/Y à H:i') }}</span>
                                </div>
                                {% endif %}

                                {% if maintenanceRequest.assignedTo %}
                                <div class="d-flex justify-content-between">
                                    <span>Assigné à :</span>
                                    <span class="fw-bold">{{ maintenanceRequest.assignedTo }}</span>
                                </div>
                                {% endif %}
                            </div>

                            <h6 class="text-muted">Coûts</h6>
                            <div class="list-group list-group-flush">
                                {% if maintenanceRequest.estimatedCost %}
                                <div class="list-group-item d-flex justify-content-between px-0">
                                    <span>Coût estimé :</span>
                                    <span class="fw-bold">{{ maintenanceRequest.estimatedCost|number_format(2, ',', ' ') }}€</span>
                                </div>
                                {% endif %}
                                {% if maintenanceRequest.actualCost %}
                                <div class="list-group-item d-flex justify-content-between px-0">
                                    <span>Coût réel :</span>
                                    <span class="fw-bold text-success">{{ maintenanceRequest.actualCost|number_format(2, ',', ' ') }}€</span>
                                </div>
                                {% if maintenanceRequest.estimatedCost and maintenanceRequest.actualCost != maintenanceRequest.estimatedCost %}
                                <div class="list-group-item d-flex justify-content-between px-0">
                                    <span>Écart :</span>
                                    {% set difference = maintenanceRequest.actualCost - maintenanceRequest.estimatedCost %}
                                    <span class="fw-bold {{ difference > 0 ? 'text-danger' : 'text-success' }}">
                                        {{ difference > 0 ? '+' : '' }}{{ difference|number_format(2, ',', ' ') }}€
                                    </span>
                                </div>
                                {% endif %}
                                {% endif %}
                                {% if not maintenanceRequest.estimatedCost and not maintenanceRequest.actualCost %}
                                <div class="text-muted">Aucun coût renseigné</div>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    {% if maintenanceRequest.resolution %}
                    <hr>
                    <h6 class="text-muted">Solution apportée</h6>
                    <p class="mb-0 bg-light p-3 rounded">{{ maintenanceRequest.resolution|nl2br }}</p>
                    {% endif %}

                    {% if maintenanceRequest.notes %}
                    <hr>
                    <h6 class="text-muted">Notes internes</h6>
                    <p class="mb-0">{{ maintenanceRequest.notes|nl2br }}</p>
                    {% endif %}
                </div>
            </div>

            <!-- Historique des statuts -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Historique</h5>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        <div class="timeline-item">
                            <div class="timeline-marker bg-info"></div>
                            <div class="timeline-content">
                                <h6 class="mb-1">Demande créée</h6>
                                <small class="text-muted">{{ maintenanceRequest.createdAt|date('d/m/Y à H:i') }}</small>
                            </div>
                        </div>

                        {% if maintenanceRequest.status == 'in_progress' or maintenanceRequest.status == 'completed' %}
                        <div class="timeline-item">
                            <div class="timeline-marker bg-warning"></div>
                            <div class="timeline-content">
                                <h6 class="mb-1">Intervention démarrée</h6>
                                {% if maintenanceRequest.assignedTo %}
                                <p class="mb-1">Assigné à : {{ maintenanceRequest.assignedTo }}</p>
                                {% endif %}
                                <small class="text-muted">{{ maintenanceRequest.updatedAt|date('d/m/Y à H:i') }}</small>
                            </div>
                        </div>
                        {% endif %}

                        {% if maintenanceRequest.status == 'completed' %}
                        <div class="timeline-item">
                            <div class="timeline-marker bg-success"></div>
                            <div class="timeline-content">
                                <h6 class="mb-1">Intervention terminée</h6>
                                {% if maintenanceRequest.resolution %}
                                <p class="mb-1">{{ maintenanceRequest.resolution }}</p>
                                {% endif %}
                                {% if maintenanceRequest.actualCost %}
                                <p class="mb-1">Coût : {{ maintenanceRequest.actualCost|number_format(2, ',', ' ') }}€</p>
                                {% endif %}
                                <small class="text-muted">{{ maintenanceRequest.completedDate|date('d/m/Y à H:i') }}</small>
                            </div>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <!-- Actions et informations complémentaires -->
        <div class="col-lg-4">
            <!-- Actions rapides -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="mb-0">Actions rapides</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        {% if maintenanceRequest.status == 'pending' %}
                        <button type="button" class="btn btn-outline-warning" data-bs-toggle="modal" data-bs-target="#startModal">
                            <i class="bi bi-play-circle me-1"></i>Démarrer l'intervention
                        </button>
                        {% elseif maintenanceRequest.status == 'in_progress' %}
                        <button type="button" class="btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#completeModal">
                            <i class="bi bi-check-circle me-1"></i>Marquer comme terminé
                        </button>
                        {% endif %}
                        <a href="{{ path('app_property_show', {id: maintenanceRequest.property.id}) }}" class="btn btn-outline-info">
                            <i class="bi bi-building me-1"></i>Voir la propriété
                        </a>
                        <a href="{{ path('app_maintenance_request_edit', {id: maintenanceRequest.id}) }}" class="btn btn-outline-secondary">
                            <i class="bi bi-pencil me-1"></i>Modifier la demande
                        </a>
                    </div>
                </div>
            </div>

            <!-- Statistiques -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="mb-0">Statistiques</h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="d-flex justify-content-between">
                            <span>Jours depuis création :</span>
                            <span class="fw-bold">{{ maintenanceRequest.daysOpen }}</span>
                        </div>
                    </div>
                    
                    {% if maintenanceRequest.scheduledDate %}
                    <div class="mb-3">
                        <div class="d-flex justify-content-between">
                            <span>Délai prévu :</span>
                            {% set daysToScheduled = maintenanceRequest.createdAt.diff(maintenanceRequest.scheduledDate).days %}
                            <span class="fw-bold">{{ daysToScheduled }} jour(s)</span>
                        </div>
                    </div>
                    {% endif %}
                    
                    {% if maintenanceRequest.completedDate %}
                    <div>
                        <div class="d-flex justify-content-between">
                            <span>Délai de résolution :</span>
                            {% set resolutionDays = maintenanceRequest.createdAt.diff(maintenanceRequest.completedDate).days %}
                            <span class="fw-bold text-success">{{ resolutionDays }} jour(s)</span>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>

            <!-- Informations système -->
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">Informations</h6>
                </div>
                <div class="card-body">
                    <small class="text-muted">
                        <div class="mb-1">Créé le : {{ maintenanceRequest.createdAt|date('d/m/Y à H:i') }}</div>
                        <div>Modifié le : {{ maintenanceRequest.updatedAt|date('d/m/Y à H:i') }}</div>
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal démarrer -->
{% if maintenanceRequest.status == 'pending' %}
<div class="modal fade" id="startModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Démarrer l'intervention</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="POST" action="{{ path('app_maintenance_request_start', {id: maintenanceRequest.id}) }}">
                <div class="modal-body">
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>
                        Cette action va marquer la demande comme "En cours".
                    </div>
                    
                    <div class="mb-3">
                        <label for="assigned_to" class="form-label">Assigné à</label>
                        <input type="text" class="form-control" id="assigned_to" name="assigned_to" value="{{ maintenanceRequest.assignedTo }}" placeholder="Nom de l'intervenant">
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="hidden" name="_token" value="{{ csrf_token('start' ~ maintenanceRequest.id) }}">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-warning">Démarrer l'intervention</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endif %}

<!-- Modal terminer -->
{% if maintenanceRequest.status == 'in_progress' %}
<div class="modal fade" id="completeModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Terminer l'intervention</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="POST" action="{{ path('app_maintenance_request_complete', {id: maintenanceRequest.id}) }}">
                <div class="modal-body">
                    <div class="alert alert-success">
                        <i class="bi bi-check-circle me-2"></i>
                        Marquer cette intervention comme terminée.
                    </div>
                    
                    <div class="mb-3">
                        <label for="resolution" class="form-label">Solution apportée *</label>
                        <textarea class="form-control" id="resolution" name="resolution" rows="3" required placeholder="Décrivez la solution apportée et les travaux effectués..."></textarea>
                    </div>
                    
                    <div class="mb-3">
                        <label for="actual_cost" class="form-label">Coût réel (€)</label>
                        <input type="number" class="form-control" id="actual_cost" name="actual_cost" step="0.01" min="0" placeholder="0.00">
                        {% if maintenanceRequest.estimatedCost %}
                        <div class="form-text">Coût estimé : {{ maintenanceRequest.estimatedCost|number_format(2, ',', ' ') }}€</div>
                        {% endif %}
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="hidden" name="_token" value="{{ csrf_token('complete' ~ maintenanceRequest.id) }}">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-success">Terminer l'intervention</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endif %}

<style>
.timeline {
    position: relative;
    padding-left: 2rem;
}

.timeline-item {
    position: relative;
    padding-bottom: 1.5rem;
}

.timeline-item:not(:last-child)::before {
    content: '';
    position: absolute;
    left: -1.5rem;
    top: 1.5rem;
    width: 2px;
    height: calc(100% - 1rem);
    background-color: #dee2e6;
}

.timeline-marker {
    position: absolute;
    left: -1.75rem;
    top: 0.25rem;
    width: 0.75rem;
    height: 0.75rem;
    border-radius: 50%;
}

.timeline-content {
    padding-left: 0;
}
</style>
{% endblock %}