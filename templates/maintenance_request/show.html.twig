{% extends 'base.html.twig' %}

{% block title %}Demande #{{ maintenance_request.id }} - LOKAPRO{% endblock %}

{% block page_title %}
    <h5 class="mb-0">
        <i class="bi bi-tools me-2"></i>
        Demande #{{ ('00000000' ~ maintenance_request.id)|slice(-8) }}
    </h5>
{% endblock %}

{% block page_actions %}
    <div class="d-flex gap-2">
        <a href="{{ path('app_maintenance_request_index') }}" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left"></i> Retour
        </a>
        {% if maintenance_request.status != 'Terminée' %}
            <button type="button" class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#completeModal">
                <i class="bi bi-check-circle"></i> Marquer terminée
            </button>
        {% endif %}
        <a href="{{ path('app_maintenance_request_edit', {id: maintenance_request.id}) }}" class="btn btn-primary btn-sm">
            <i class="bi bi-pencil"></i> Modifier
        </a>
    </div>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-8">
            <!-- Informations principales -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>
                        Détails de la demande
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <td class="text-muted">Titre :</td>
                                    <td><strong>{{ maintenance_request.title }}</strong></td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Catégorie :</td>
                                    <td>{{ maintenance_request.category }}</td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Priorité :</td>
                                    <td>
                                        <span class="badge bg-{{ maintenance_request.priorityColor }}">
                                            {{ maintenance_request.priority }}
                                        </span>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Statut :</td>
                                    <td>
                                        <span class="badge bg-{{ maintenance_request.statusColor }}">
                                            {{ maintenance_request.status }}
                                        </span>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <td class="text-muted">Date demandée :</td>
                                    <td>{{ maintenance_request.requestedDate ? maintenance_request.requestedDate|date('d/m/Y') : 'N/A' }}</td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Date programmée :</td>
                                    <td>{{ maintenance_request.scheduledDate ? maintenance_request.scheduledDate|date('d/m/Y') : 'Non programmée' }}</td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Date terminée :</td>
                                    <td>{{ maintenance_request.completedDate ? maintenance_request.completedDate|date('d/m/Y') : 'Non terminée' }}</td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Créée le :</td>
                                    <td>{{ maintenance_request.createdAt|date('d/m/Y H:i') }}</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <div class="mt-3">
                        <h6>Description :</h6>
                        <p class="text-muted">{{ maintenance_request.description }}</p>
                    </div>

                    {% if maintenance_request.workPerformed %}
                        <div class="mt-3">
                            <h6>Travail effectué :</h6>
                            <p class="text-muted">{{ maintenance_request.workPerformed }}</p>
                        </div>
                    {% endif %}

                    {% if maintenance_request.notes %}
                        <div class="mt-3">
                            <h6>Notes :</h6>
                            <p class="text-muted">{{ maintenance_request.notes }}</p>
                        </div>
                    {% endif %}
                </div>
            </div>

            <!-- Informations propriété et locataire -->
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-building me-2"></i>
                        Propriété et locataire
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Propriété</h6>
                            <p class="mb-1"><strong>{{ maintenance_request.property.fullAddress }}</strong></p>
                            <p class="text-muted small">
                                {{ maintenance_request.property.propertyType }} -
                                {{ maintenance_request.property.rooms }} pièces
                            </p>
                        </div>
                        {% if maintenance_request.tenant %}
                            <div class="col-md-6">
                                <h6>Locataire</h6>
                                <p class="mb-1"><strong>{{ maintenance_request.tenant.fullName }}</strong></p>
                                <p class="text-muted small">
                                    <i class="bi bi-envelope me-1"></i>{{ maintenance_request.tenant.email }}
                                    {% if maintenance_request.tenant.phone %}
                                        <br><i class="bi bi-phone me-1"></i>{{ maintenance_request.tenant.phone }}
                                    {% endif %}
                                </p>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Prestataire -->
            {% if maintenance_request.assignedTo %}
                <div class="card mb-4">
                    <div class="card-header">
                        <h6 class="mb-0">
                            <i class="bi bi-person-badge me-2"></i>
                            Prestataire assigné
                        </h6>
                    </div>
                    <div class="card-body">
                        <h6>{{ maintenance_request.assignedTo }}</h6>
                        {% if maintenance_request.assignedPhone %}
                            <p class="text-muted mb-1">
                                <i class="bi bi-phone me-1"></i>{{ maintenance_request.assignedPhone }}
                            </p>
                        {% endif %}
                        {% if maintenance_request.assignedEmail %}
                            <p class="text-muted mb-1">
                                <i class="bi bi-envelope me-1"></i>{{ maintenance_request.assignedEmail }}
                            </p>
                        {% endif %}
                    </div>
                </div>
            {% endif %}

            <!-- Coûts -->
            {% if maintenance_request.estimatedCost or maintenance_request.actualCost %}
                <div class="card mb-4">
                    <div class="card-header">
                        <h6 class="mb-0">
                            <i class="bi bi-currency-euro me-2"></i>
                            Coûts
                        </h6>
                    </div>
                    <div class="card-body">
                        {% if maintenance_request.estimatedCost %}
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Coût estimé :</span>
                                <strong>{{ maintenance_request.estimatedCost|currency }}</strong>
                            </div>
                        {% endif %}
                        {% if maintenance_request.actualCost %}
                            <div class="d-flex justify-content-between">
                                <span class="text-muted">Coût réel :</span>
                                <strong class="text-success">{{ maintenance_request.actualCost|currency }}</strong>
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endif %}

            <!-- Actions -->
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-gear me-2"></i>
                        Actions
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        {% if maintenance_request.status != 'Terminée' %}
                            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#completeModal">
                                <i class="bi bi-check-circle me-2"></i>
                                Marquer comme terminée
                            </button>
                        {% endif %}

                        <a href="{{ path('app_maintenance_request_edit', {id: maintenance_request.id}) }}" class="btn btn-outline-primary">
                            <i class="bi bi-pencil me-2"></i>
                            Modifier la demande
                        </a>

                        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                            <i class="bi bi-trash me-2"></i>
                            Supprimer
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <!-- Modal marquer comme terminée -->
    <div class="modal fade" id="completeModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Marquer comme terminée</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form action="{{ path('app_maintenance_request_complete', {id: maintenance_request.id}) }}" method="POST">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Travail effectué</label>
                            <textarea name="work_performed" class="form-control" rows="3" placeholder="Décrivez le travail effectué..."></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Coût réel</label>
                            <input type="number" name="actual_cost" class="form-control" step="0.01" placeholder="0.00">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                        <button type="submit" class="btn btn-success">
                            <input type="hidden" name="_token" value="{{ csrf_token('complete' ~ maintenance_request.id) }}">
                            Marquer comme terminée
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal suppression -->
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirmer la suppression</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Êtes-vous sûr de vouloir supprimer cette demande de maintenance ?</p>
                    <p class="text-muted">Cette action est irréversible.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <form action="{{ path('app_maintenance_request_delete', {id: maintenance_request.id}) }}" method="POST" class="d-inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ maintenance_request.id) }}">
                        <button type="submit" class="btn btn-danger">Supprimer</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
