{% extends 'base.html.twig' %}

{% block title %}Paramètres application - Administration - LOKAPRO{% endblock %}

{% block page_title %}
    <h5 class="mb-0">
        <i class="bi bi-app me-2"></i>
        Paramètres de l'application
    </h5>
{% endblock %}

{% block page_actions %}
    <a href="{{ path('app_admin_settings_index') }}" class="btn btn-outline-secondary btn-sm">
        <i class="bi bi-arrow-left"></i> Retour
    </a>
{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-gear me-2"></i>
                        Configuration générale
                    </h6>
                </div>
                <div class="card-body">
                    <form method="POST">
                        <!-- Informations de base -->
                        <h6 class="mb-3">Informations de base</h6>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Nom de l'application</label>
                                    <input type="text" name="app_name" class="form-control"
                                           value="{{ settings.app_name }}" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Nom de la société</label>
                                    <input type="text" name="company_name" class="form-control"
                                           value="{{ settings.company_name }}" required>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <textarea name="app_description" class="form-control" rows="2">{{ settings.app_description }}</textarea>
                        </div>

                        <!-- Coordonnées -->
                        <h6 class="mb-3 mt-4">Coordonnées de la société</h6>
                        <div class="mb-3">
                            <label class="form-label">Adresse complète</label>
                            <textarea name="company_address" class="form-control" rows="2">{{ settings.company_address }}</textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Téléphone</label>
                                    <input type="tel" name="company_phone" class="form-control"
                                           value="{{ settings.company_phone }}">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Email de contact</label>
                                    <input type="email" name="company_email" class="form-control"
                                           value="{{ settings.company_email }}" required>
                                </div>
                            </div>
                        </div>

                        <!-- Logo -->
                        <div class="mb-3">
                            <label class="form-label">URL du logo</label>
                            <input type="url" name="app_logo" class="form-control"
                                   value="{{ settings.app_logo }}"
                                   placeholder="https://example.com/logo.png">
                            <div class="form-text">URL vers le logo de votre application (optionnel)</div>
                        </div>

                        <!-- Options avancées -->
                        <h6 class="mb-3 mt-4">Options avancées</h6>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-check form-switch mb-3">
                                    <input class="form-check-input" type="checkbox" name="maintenance_mode"
                                           id="maintenance_mode" {{ settings.maintenance_mode ? 'checked' : '' }}>
                                    <label class="form-check-label" for="maintenance_mode">
                                        Mode maintenance
                                    </label>
                                    <div class="form-text">Désactive l'accès à l'application pour les utilisateurs</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check form-switch mb-3">
                                    <input class="form-check-input" type="checkbox" name="registration_enabled"
                                           id="registration_enabled" {{ settings.registration_enabled ? 'checked' : '' }}>
                                    <label class="form-check-label" for="registration_enabled">
                                        Inscription ouverte
                                    </label>
                                    <div class="form-text">Permet aux nouveaux utilisateurs de s'inscrire</div>
                                </div>
                            </div>
                        </div>

                        <!-- Aperçu -->
                        <div class="card bg-light mt-4">
                            <div class="card-body">
                                <h6>Aperçu</h6>
                                <div class="d-flex align-items-center">
                                    {% if settings.app_logo %}
                                        <img src="{{ settings.app_logo }}" alt="Logo" class="me-3" style="max-height: 40px;">
                                    {% else %}
                                        <i class="bi bi-building fs-1 text-primary me-3"></i>
                                    {% endif %}
                                    <div>
                                        <h5 class="mb-1" id="appNamePreview">{{ settings.app_name }}</h5>
                                        <p class="text-muted mb-0" id="companyNamePreview">{{ settings.company_name }}</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a href="{{ path('app_admin_settings_index') }}" class="btn btn-secondary">Annuler</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-2"></i>
                                Enregistrer
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Mise à jour de l'aperçu en temps réel
            const appNameInput = document.querySelector('input[name="app_name"]');
            const companyNameInput = document.querySelector('input[name="company_name"]');
            const appNamePreview = document.getElementById('appNamePreview');
            const companyNamePreview = document.getElementById('companyNamePreview');

            function updatePreview() {
                if (appNameInput && appNamePreview) {
                    appNamePreview.textContent = appNameInput.value || 'LOKAPRO';
                }
                if (companyNameInput && companyNamePreview) {
                    companyNamePreview.textContent = companyNameInput.value || 'LOKAPRO Gestion';
                }
            }

            if (appNameInput) appNameInput.addEventListener('input', updatePreview);
            if (companyNameInput) companyNameInput.addEventListener('input', updatePreview);
        });
    </script>
{% endblock %}
