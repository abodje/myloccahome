{% extends 'base.html.twig' %}

{% block title %}Correction des utilisateurs sans organisation{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="bi bi-tools me-2"></i>
                        Correction des utilisateurs sans organisation
                    </h3>
                </div>
                <div class="card-body">
                    <!-- Statistiques -->
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <div class="card bg-primary text-white">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h4 class="mb-0" id="totalUsers">-</h4>
                                            <p class="mb-0">Total utilisateurs</p>
                                        </div>
                                        <div class="align-self-center">
                                            <i class="bi bi-people fs-1"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-success text-white">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h4 class="mb-0" id="usersWithOrg">-</h4>
                                            <p class="mb-0">Avec organisation</p>
                                        </div>
                                        <div class="align-self-center">
                                            <i class="bi bi-check-circle fs-1"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-warning text-white">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h4 class="mb-0" id="usersWithoutOrg">-</h4>
                                            <p class="mb-0">Sans organisation</p>
                                        </div>
                                        <div class="align-self-center">
                                            <i class="bi bi-exclamation-triangle fs-1"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-info text-white">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h4 class="mb-0" id="percentageWithOrg">-</h4>
                                            <p class="mb-0">% avec organisation</p>
                                        </div>
                                        <div class="align-self-center">
                                            <i class="bi bi-percent fs-1"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Actions -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="d-flex gap-2">
                                <button type="button" class="btn btn-primary" id="btnRefreshStats">
                                    <i class="bi bi-arrow-clockwise me-2"></i>
                                    Actualiser les statistiques
                                </button>
                                <button type="button" class="btn btn-success" id="btnExecuteFix">
                                    <i class="bi bi-tools me-2"></i>
                                    Exécuter la correction
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Utilisateurs sans organisation -->
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title">
                                        <i class="bi bi-list-ul me-2"></i>
                                        Utilisateurs sans organisation
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div id="loadingStats" class="text-center py-4">
                                        <div class="spinner-border text-primary" role="status">
                                            <span class="visually-hidden">Chargement...</span>
                                        </div>
                                        <p class="mt-2">Chargement des statistiques...</p>
                                    </div>
                                    <div id="usersTable" style="display: none;">
                                        <div class="table-responsive">
                                            <table class="table table-striped">
                                                <thead>
                                                    <tr>
                                                        <th>ID</th>
                                                        <th>Email</th>
                                                        <th>Nom</th>
                                                        <th>Rôles</th>
                                                        <th>Tenant</th>
                                                        <th>Organisation du tenant</th>
                                                    </tr>
                                                </thead>
                                                <tbody id="usersTableBody">
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Résultat de l'exécution -->
                    <div id="executionResult" class="mt-4" style="display: none;">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title">
                                    <i class="bi bi-clipboard-check me-2"></i>
                                    Résultat de l'exécution
                                </h5>
                            </div>
                            <div class="card-body">
                                <div id="executionResultContent"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Charger les statistiques au démarrage
    loadStats();

    // Bouton actualiser
    document.getElementById('btnRefreshStats').addEventListener('click', loadStats);

    // Bouton exécuter
    document.getElementById('btnExecuteFix').addEventListener('click', executeFix);
});

function loadStats() {
    const loadingDiv = document.getElementById('loadingStats');
    const tableDiv = document.getElementById('usersTable');
    
    loadingDiv.style.display = 'block';
    tableDiv.style.display = 'none';

    fetch('{{ path('app_admin_fix_user_organization_stats') }}')
        .then(response => response.json())
        .then(data => {
            loadingDiv.style.display = 'none';
            
            if (data.success) {
                // Mettre à jour les statistiques
                document.getElementById('totalUsers').textContent = data.stats.total_users;
                document.getElementById('usersWithOrg').textContent = data.stats.users_with_organization;
                document.getElementById('usersWithoutOrg').textContent = data.stats.users_without_organization;
                document.getElementById('percentageWithOrg').textContent = data.stats.percentage_with_org + '%';

                // Mettre à jour le tableau
                const tbody = document.getElementById('usersTableBody');
                tbody.innerHTML = '';

                if (data.users_without_org_details.length === 0) {
                    tbody.innerHTML = '<tr><td colspan="6" class="text-center text-success">✅ Aucun utilisateur sans organisation !</td></tr>';
                } else {
                    data.users_without_org_details.forEach(user => {
                        const row = document.createElement('tr');
                        row.innerHTML = `
                            <td>${user.id}</td>
                            <td>${user.email}</td>
                            <td>${user.firstName} ${user.lastName}</td>
                            <td>${user.roles.join(', ')}</td>
                            <td>${user.hasTenant ? '✅ Oui' : '❌ Non'}</td>
                            <td>${user.tenantOrganization || 'N/A'}</td>
                        `;
                        tbody.appendChild(row);
                    });
                }

                tableDiv.style.display = 'block';
            } else {
                alert('Erreur lors du chargement des statistiques : ' + data.message);
            }
        })
        .catch(error => {
            loadingDiv.style.display = 'none';
            console.error('Erreur:', error);
            alert('Erreur lors du chargement des statistiques');
        });
}

function executeFix() {
    if (!confirm('Êtes-vous sûr de vouloir exécuter la correction des utilisateurs sans organisation ?')) {
        return;
    }

    const btn = document.getElementById('btnExecuteFix');
    const originalText = btn.innerHTML;
    btn.disabled = true;
    btn.innerHTML = '<i class="bi bi-hourglass-split me-2"></i>Exécution en cours...';

    fetch('{{ path('app_admin_fix_user_organization_execute') }}', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        }
    })
    .then(response => response.json())
    .then(data => {
        btn.disabled = false;
        btn.innerHTML = originalText;

        if (data.success) {
            // Afficher le résultat
            const resultDiv = document.getElementById('executionResult');
            const contentDiv = document.getElementById('executionResultContent');
            
            contentDiv.innerHTML = `
                <div class="alert alert-success">
                    <i class="bi bi-check-circle me-2"></i>
                    <strong>Succès !</strong> ${data.message}
                    <div class="mt-2">
                        <strong>Résultat :</strong> ${data.task_result}
                    </div>
                </div>
            `;
            
            resultDiv.style.display = 'block';

            // Recharger les statistiques
            loadStats();
        } else {
            alert('Erreur lors de l\'exécution : ' + data.message);
        }
    })
    .catch(error => {
        btn.disabled = false;
        btn.innerHTML = originalText;
        console.error('Erreur:', error);
        alert('Erreur lors de l\'exécution');
    });
}
</script>
{% endblock %}
