{% extends 'base.html.twig' %}

{% block title %}Gestion des Abonnements{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">
                    <i class="bi bi-file-text me-2"></i>
                    Gestion des Abonnements
                </h1>
                <a href="{{ path('app_admin_subscription_new') }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>
                    Nouvel Abonnement
                </a>
            </div>

            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            <!-- Statistiques -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title text-primary">{{ stats.total }}</h5>
                            <p class="card-text">Total Abonnements</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title text-success">{{ stats.active }}</h5>
                            <p class="card-text">Actifs</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title text-warning">{{ stats.cancelled }}</h5>
                            <p class="card-text">Annulés</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title text-danger">{{ stats.expired }}</h5>
                            <p class="card-text">Expirés</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Filtres -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="card-title mb-0">
                        <i class="bi bi-funnel me-2"></i>
                        Filtres
                    </h6>
                </div>
                <div class="card-body">
                    <form method="GET" class="row g-3">
                        <div class="col-md-3">
                            <label for="status" class="form-label">Statut</label>
                            <select name="status" id="status" class="form-select">
                                <option value="">Tous les statuts</option>
                                <option value="ACTIVE" {{ current_filters.status == 'ACTIVE' ? 'selected' : '' }}>Actif</option>
                                <option value="CANCELLED" {{ current_filters.status == 'CANCELLED' ? 'selected' : '' }}>Annulé</option>
                                <option value="EXPIRED" {{ current_filters.status == 'EXPIRED' ? 'selected' : '' }}>Expiré</option>
                                <option value="PENDING" {{ current_filters.status == 'PENDING' ? 'selected' : '' }}>En attente</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="plan" class="form-label">Plan</label>
                            <select name="plan" id="plan" class="form-select">
                                <option value="">Tous les plans</option>
                                {% for plan in plans %}
                                    <option value="{{ plan.id }}" {{ current_filters.plan == plan.id ? 'selected' : '' }}>
                                        {{ plan.name }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="organization" class="form-label">Organisation</label>
                            <select name="organization" id="organization" class="form-select">
                                <option value="">Toutes les organisations</option>
                                {% for organization in organizations %}
                                    <option value="{{ organization.id }}" {{ current_filters.organization == organization.id ? 'selected' : '' }}>
                                        {{ organization.name }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">&nbsp;</label>
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-search me-1"></i>
                                    Filtrer
                                </button>
                                <a href="{{ path('app_admin_subscription_index') }}" class="btn btn-secondary">
                                    <i class="bi bi-x-circle me-1"></i>
                                    Effacer
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Liste des abonnements -->
            <div class="card">
                <div class="card-header">
                    <h6 class="card-title mb-0">
                        <i class="bi bi-list me-2"></i>
                        Liste des Abonnements ({{ subscriptions|length }})
                    </h6>
                </div>
                <div class="card-body p-0">
                    {% if subscriptions|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Organisation</th>
                                        <th>Plan</th>
                                        <th>Statut</th>
                                        <th>Cycle</th>
                                        <th>Début</th>
                                        <th>Fin</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for subscription in subscriptions %}
                                        <tr>
                                            <td>
                                                <div>
                                                    <strong>{{ subscription.organization.name }}</strong>
                                                    <br>
                                                    <small class="text-muted">{{ subscription.organization.slug }}</small>
                                                </div>
                                            </td>
                                            <td>
                                                <div>
                                                    <strong>{{ subscription.plan.name }}</strong>
                                                    <br>
                                                    <small class="text-muted">
                                                        {{ subscription.plan.monthlyPrice|number_format(0, ',', ' ') }} {{ subscription.plan.currency }}/mois
                                                    </small>
                                                </div>
                                            </td>
                                            <td>
                                                {% set statusClass = {
                                                    'ACTIVE': 'success',
                                                    'CANCELLED': 'warning',
                                                    'EXPIRED': 'danger',
                                                    'PENDING': 'info'
                                                } %}
                                                <span class="badge bg-{{ statusClass[subscription.status] ?? 'secondary' }}">
                                                    {{ subscription.status }}
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">
                                                    {{ subscription.billingCycle == 'monthly' ? 'Mensuel' : 'Annuel' }}
                                                </span>
                                            </td>
                                            <td>
                                                {{ subscription.startDate|date('d/m/Y') }}
                                            </td>
                                            <td>
                                                {% if subscription.endDate %}
                                                    {{ subscription.endDate|date('d/m/Y') }}
                                                {% else %}
                                                    <em class="text-muted">Indéfinie</em>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a href="{{ path('app_admin_subscription_show', {'id': subscription.id}) }}"
                                                       class="btn btn-outline-primary">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a href="{{ path('app_admin_subscription_edit', {'id': subscription.id}) }}"
                                                       class="btn btn-outline-secondary">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>

                                                    {% if subscription.status != 'ACTIVE' %}
                                                        <form method="post" action="{{ path('app_admin_subscription_activate', {'id': subscription.id}) }}" class="d-inline">
                                                            <button type="submit" class="btn btn-outline-success"
                                                                    onclick="return confirm('Activer cet abonnement ?');">
                                                                <i class="bi bi-play-circle"></i>
                                                            </button>
                                                        </form>
                                                    {% endif %}

                                                    {% if subscription.status == 'ACTIVE' %}
                                                        <form method="post" action="{{ path('app_admin_subscription_cancel', {'id': subscription.id}) }}" class="d-inline">
                                                            <button type="submit" class="btn btn-outline-warning"
                                                                    onclick="return confirm('Annuler cet abonnement ?');">
                                                                <i class="bi bi-pause-circle"></i>
                                                            </button>
                                                        </form>
                                                    {% endif %}

                                                    <form method="post" action="{{ path('app_admin_subscription_delete', {'id': subscription.id}) }}"
                                                          class="d-inline"
                                                          onsubmit="return confirm('Supprimer cet abonnement ?');">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ subscription.id) }}">
                                                        <button type="submit" class="btn btn-outline-danger">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center p-5">
                            <i class="bi bi-inbox display-1 text-muted"></i>
                            <h5 class="mt-3">Aucun abonnement trouvé</h5>
                            <p class="text-muted">
                                {% if current_filters.status or current_filters.plan or current_filters.organization %}
                                    Aucun abonnement ne correspond aux filtres sélectionnés.
                                {% else %}
                                    Commencez par créer votre premier abonnement.
                                {% endif %}
                            </p>
                            <a href="{{ path('app_admin_subscription_new') }}" class="btn btn-primary">
                                <i class="bi bi-plus-circle me-2"></i>
                                Créer un Abonnement
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
