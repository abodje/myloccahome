{% extends 'base.html.twig' %}

{% block title %}Rapports Avancés - Administration{% endblock %}

{% block page_title %}
    <h5 class="mb-0">
        <i class="bi bi-pie-chart-fill me-2"></i>
        Rapports et Analyses
    </h5>
{% endblock %}

{% block page_actions %}
    <button class="btn btn-outline-primary btn-sm" onclick="window.print();">
        <i class="bi bi-printer me-2"></i> Imprimer / PDF
    </button>
{% endblock %}

{% block body %}

    {# Section des KPIs principaux #}
    <div class="row g-4 mb-4">
        <div class="col-md-6 col-lg-3">
            <div class="card h-100 shadow-sm border-start border-success border-4">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <small class="text-muted fw-bold">REVENUS (CE MOIS)</small>
                            <h3 class="mb-0">{{ reports.monthly_revenue|currency }}</h3>
                        </div>
                        <i class="bi bi-cash-stack fs-1 text-success opacity-50"></i>
                    </div>
                    <div class="mt-auto pt-2">
                        {% set growth = reports.monthly_revenue - reports.last_month_revenue %}
                        {% set revenueGrowth = (reports.last_month_revenue > 0) ? (growth / reports.last_month_revenue) * 100 : 0 %}
                        {% if revenueGrowth > 0 %}
                            <span class="text-success small">
                                <i class="bi bi-arrow-up-short"></i> {{ revenueGrowth|number_format(1) }}% vs mois dernier
                            </span>
                        {% elseif revenueGrowth < 0 %}
                            <span class="text-danger small">
                                <i class="bi bi-arrow-down-short"></i> {{ revenueGrowth|number_format(1) }}% vs mois dernier
                            </span>
                        {% else %}
                            <span class="text-muted small">Stable</span>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card h-100 shadow-sm border-start border-primary border-4">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <small class="text-muted fw-bold">BÉNÉFICE NET (CE MOIS)</small>
                            <h3 class="mb-0">{{ reports.net_income|currency }}</h3>
                        </div>
                        <i class="bi bi-piggy-bank fs-1 text-primary opacity-50"></i>
                    </div>
                    <div class="mt-auto pt-2">
                        <small class="text-muted">Dépenses: {{ reports.monthly_expenses|currency }}</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card h-100 shadow-sm border-start border-info border-4">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <small class="text-muted fw-bold">TAUX D'OCCUPATION</small>
                            <h3 class="mb-0">{{ reports.occupancy_rate|number_format(1) }}%</h3>
                        </div>
                        <i class="bi bi-house-check fs-1 text-info opacity-50"></i>
                    </div>
                    <div class="mt-auto pt-2">
                        <small class="text-muted">{{ reports.occupied_properties }} / {{ reports.occupied_properties + reports.vacant_properties }} biens occupés</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card h-100 shadow-sm border-start border-danger border-4">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <small class="text-muted fw-bold">PAIEMENTS EN RETARD</small>
                            <h3 class="mb-0">{{ reports.overdue_payments_count }}</h3>
                        </div>
                        <i class="bi bi-calendar-x fs-1 text-danger opacity-50"></i>
                    </div>
                    <div class="mt-auto pt-2">
                        <small class="text-muted">Total: {{ reports.total_overdue_amount|currency }}</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Graphique principal #}
    <div class="card shadow-sm mb-4">
        <div class="card-header">
            <h6 class="mb-0"><i class="bi bi-graph-up me-2"></i>Performance Financière (12 derniers mois)</h6>
        </div>
        <div class="card-body">
            <canvas id="financialChart" style="max-height: 350px;"></canvas>
        </div>
    </div>

    {# Listes détaillées #}
    <div class="row g-4">
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-transparent">
                    <h6 class="mb-0 text-danger"><i class="bi bi-exclamation-triangle-fill me-2"></i>Paiements en Retard</h6>
                </div>
                <div class="card-body p-0">
                    {% if reports.overdue_payments_count > 0 %}
                        <ul class="list-group list-group-flush">
                            {% for payment in reports.overdue_payments|slice(0, 5) %}
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <a href="{{ path('app_tenant_show', {id: payment.lease.tenant.id}) }}" class="text-decoration-none">{{ payment.lease.tenant.fullName }}</a><br>
                                        <small class="text-muted">Bien: {{ payment.lease.property.address }}</small>
                                    </div>
                                    <div class="text-end">
                                        <strong class="text-danger">{{ payment.amount|currency }}</strong><br>
                                        <small class="text-muted">Dû le {{ payment.dueDate|date('d/m/Y') }}</small>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <div class="p-4 text-center text-muted">
                            <i class="bi bi-check-circle-fill fs-2 text-success"></i>
                            <p class="mt-2 mb-0">Aucun paiement en retard. Excellent !</p>
                        </div>
                    {% endif %}
                </div>
                {% if reports.overdue_payments_count > 5 %}
                    <div class="card-footer text-center">
                        <a href="{{ path('app_payment_index', {'status': 'OVERDUE'}) }}">Voir les {{ reports.overdue_payments_count }} paiements en retard...</a>
                    </div>
                {% endif %}
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-transparent">
                    <h6 class="mb-0 text-warning"><i class="bi bi-file-earmark-break-fill me-2"></i>Baux Expirant Bientôt (< 90 jours)</h6>
                </div>
                <div class="card-body p-0">
                    {% if reports.expiring_leases_count > 0 %}
                        <ul class="list-group list-group-flush">
                            {% for lease in reports.expiring_leases|slice(0, 5) %}
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <a href="{{ path('app_property_show', {id: lease.property.id}) }}" class="text-decoration-none">{{ lease.property.address }}</a><br>
                                        <small class="text-muted">Locataire: {{ lease.tenant.fullName }}</small>
                                    </div>
                                    <div class="text-end">
                                        <strong class="text-warning">{{ lease.endDate|date('d/m/Y') }}</strong><br>
                                        <small class="text-muted">Expire dans {{ lease.endDate|date('U') > 'now'|date('U') ? (lease.endDate|date('U') - 'now'|date('U')) // (24*3600) : 0 }} jours</small>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <div class="p-4 text-center text-muted">
                            <i class="bi bi-shield-check-fill fs-2 text-info"></i>
                            <p class="mt-2 mb-0">Aucun bail n'expire dans les 90 prochains jours.</p>
                        </div>
                    {% endif %}
                </div>
                {% if reports.expiring_leases_count > 5 %}
                    <div class="card-footer text-center">
                        <a href="{{ path('app_lease_index') }}">Voir tous les baux...</a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const chartData = JSON.parse('{{ chartData|raw }}');

            const ctx = document.getElementById('financialChart').getContext('2d');
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: chartData.labels,
                    datasets: [
                        {
                            label: 'Bénéfice Net',
                            data: chartData.netIncome,
                            type: 'line',
                            borderColor: '#0d6efd',
                            backgroundColor: 'rgba(13, 110, 253, 0.1)',
                            tension: 0.3,
                            fill: true,
                            order: 1
                        },
                        {
                            label: 'Revenus',
                            data: chartData.revenue,
                            backgroundColor: 'rgba(25, 135, 84, 0.7)',
                            order: 2
                        },
                        {
                            label: 'Dépenses',
                            data: chartData.expenses,
                            backgroundColor: 'rgba(220, 53, 69, 0.7)',
                            order: 3
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'top',
                        },
                        tooltip: {
                            mode: 'index',
                            intersect: false,
                        }
                    },
                    scales: {
                        x: {
                            stacked: true,
                        },
                        y: {
                            stacked: false,
                            beginAtZero: true,
                            ticks: {
                                callback: function(value) {
                                    return value.toLocaleString('fr-FR', { style: 'currency', currency: 'EUR' });
                                }
                            }
                        }
                    }
                }
            });
        });
    </script>
{% endblock %}
