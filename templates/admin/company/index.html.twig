{% extends 'base.html.twig' %}

{% block title %}Sociétés - Administration - MYLOCCA{% endblock %}

{% block page_title %}
    <h5 class="mb-0">
        <i class="bi bi-briefcase me-2"></i>
        Gestion des Sociétés
    </h5>
{% endblock %}

{% block page_actions %}
    <a href="{{ path('app_admin_company_new') }}" class="btn btn-primary btn-sm">
        <i class="bi bi-plus-circle"></i> Nouvelle société
    </a>
{% endblock %}

{% block body %}
    <div class="row mb-4">
        <div class="col-lg-4 col-md-6">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h3 class="mb-0">{{ companies|length }}</h3>
                    <small>Sociétés totales</small>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h3 class="mb-0">{{ companies|filter(c => c.isActive)|length }}</h3>
                    <small>Sociétés actives</small>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h3 class="mb-0">{{ stats|reduce((carry, s) => carry + s.properties, 0) }}</h3>
                    <small>Biens totaux</small>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            {% if companies|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Organisation</th>
                                <th>Contact</th>
                                <th>Utilisateurs</th>
                                <th>Biens</th>
                                <th>Statut</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for company in companies %}
                                {% set company_stats = stats[company.id] %}
                                <tr>
                                    <td>
                                        <strong>{{ company.name }}</strong>
                                        {% if company.registrationNumber %}
                                            <br><small class="text-muted">{{ company.registrationNumber }}</small>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if company.organization %}
                                            <a href="{{ path('app_admin_organization_show', {id: company.organization.id}) }}">
                                                {{ company.organization.name }}
                                            </a>
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if company.email %}
                                            <i class="bi bi-envelope me-1"></i>{{ company.email }}<br>
                                        {% endif %}
                                        {% if company.phone %}
                                            <i class="bi bi-phone me-1"></i>{{ company.phone }}
                                        {% endif %}
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">{{ company_stats.users }}</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary">{{ company_stats.properties }}</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-{{ company.isActive ? 'success' : 'danger' }}">
                                            {{ company.isActive ? 'Active' : 'Inactive' }}
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="{{ path('app_admin_company_show', {id: company.id}) }}"
                                               class="btn btn-outline-primary"
                                               title="Voir">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="{{ path('app_admin_company_edit', {id: company.id}) }}"
                                               class="btn btn-outline-secondary"
                                               title="Modifier">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a href="{{ path('app_admin_company_stats', {id: company.id}) }}"
                                               class="btn btn-outline-info"
                                               title="Statistiques">
                                                <i class="bi bi-graph-up"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>
                    Aucune société enregistrée. Créez votre première société.
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

