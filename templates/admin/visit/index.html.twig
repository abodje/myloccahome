{% extends 'base.html.twig' %}

{% block title %}Gestion des Visites - Dashboard{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-2 sidebar p-3">
            {% include '_partials/sidebar.html.twig' %}
        </div>

        <div class="col-md-10 main-content p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h2 mb-2">
                        <i class="bi bi-calendar-check"></i> Gestion des Visites
                    </h1>
                    <p class="text-muted">Gérez les créneaux de visite, réservations et candidatures</p>
                </div>
                <div>
                    <a href="{{ path('app_admin_visit_slot_new') }}" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Nouveau créneau
                    </a>
                </div>
            </div>

            <!-- Statistiques -->
            <div class="row g-3 mb-4">
                <div class="col-md-3">
                    <div class="card border-primary">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-muted mb-2">Visites à venir</h6>
                                    <h2 class="mb-0 text-primary">{{ upcoming_visits|length }}</h2>
                                </div>
                                <i class="bi bi-clock-history text-primary" style="font-size: 2.5rem; opacity: 0.5;"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card border-success">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-muted mb-2">Candidatures approuvées</h6>
                                    <h2 class="mb-0 text-success">{{ application_stats.approved|default(0) }}</h2>
                                </div>
                                <i class="bi bi-check-circle text-success" style="font-size: 2.5rem; opacity: 0.5;"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card border-info">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-muted mb-2">Total candidatures</h6>
                                    <h2 class="mb-0 text-info">{{ application_stats.total|default(0) }}</h2>
                                </div>
                                <i class="bi bi-file-earmark-text text-info" style="font-size: 2.5rem; opacity: 0.5;"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card border-warning">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-muted mb-2">En attente de révision</h6>
                                    <h2 class="mb-0 text-warning">{{ pending_applications|length }}</h2>
                                </div>
                                <i class="bi bi-hourglass-split text-warning" style="font-size: 2.5rem; opacity: 0.5;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Navigation rapide -->
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="bi bi-calendar3"></i> Créneaux de visite
                            </h5>
                            <p class="card-text text-muted">
                                Gérez les créneaux horaires disponibles pour les visites de propriétés.
                            </p>
                            <a href="{{ path('app_admin_visit_slots') }}" class="btn btn-outline-primary">
                                Gérer les créneaux
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="bi bi-people"></i> Réservations de visites
                            </h5>
                            <p class="card-text text-muted">
                                Consultez et gérez les réservations de visite des candidats locataires.
                            </p>
                            <a href="{{ path('app_admin_visits_list') }}" class="btn btn-outline-primary">
                                Voir les visites
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="bi bi-file-earmark-person"></i> Candidatures
                            </h5>
                            <p class="card-text text-muted">
                                Examinez les candidatures des locataires avec scoring automatique.
                            </p>
                            <a href="{{ path('app_admin_applications_list') }}" class="btn btn-outline-primary">
                                Voir les candidatures
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Prochaines visites -->
            {% if upcoming_visits|length > 0 %}
                <div class="card mt-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">
                            <i class="bi bi-calendar-event"></i> Prochaines visites planifiées
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>Date & Heure</th>
                                        <th>Propriété</th>
                                        <th>Visiteur</th>
                                        <th>Contact</th>
                                        <th>Statut</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for visit in upcoming_visits|slice(0, 10) %}
                                        <tr>
                                            <td>
                                                <i class="bi bi-calendar"></i>
                                                {{ visit.visitSlot.startTime|date('d/m/Y H:i') }}
                                            </td>
                                            <td>
                                                <strong>{{ visit.visitSlot.property.propertyType }}</strong><br>
                                                <small class="text-muted">{{ visit.visitSlot.property.fullAddress|slice(0, 50) }}</small>
                                            </td>
                                            <td>{{ visit.firstName }} {{ visit.lastName }}</td>
                                            <td>
                                                <small>
                                                    <i class="bi bi-envelope"></i> {{ visit.email }}<br>
                                                    <i class="bi bi-telephone"></i> {{ visit.phone }}
                                                </small>
                                            </td>
                                            <td>
                                                {% if visit.status == 'confirmed' %}
                                                    <span class="badge bg-success">Confirmé</span>
                                                {% elseif visit.status == 'pending' %}
                                                    <span class="badge bg-warning">En attente</span>
                                                {% elseif visit.status == 'cancelled' %}
                                                    <span class="badge bg-danger">Annulé</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">{{ visit.status }}</span>
                                                {% endif %}
                                            </td>
                                            <td class="text-end">
                                                <a href="{{ path('app_admin_visit_show', {id: visit.id}) }}"
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
