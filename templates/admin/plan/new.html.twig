{% extends 'base.html.twig' %}

{% block title %}Nouveau Plan d'Abonnement{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">
                    <i class="bi bi-plus-circle me-2"></i>
                    Nouveau Plan d'Abonnement
                </h1>
                <a href="{{ path('app_admin_plan_index') }}" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-2"></i>
                    Retour à la liste
                </a>
            </div>

            <div class="row">
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Informations du Plan</h5>
                        </div>
                        <div class="card-body">
                            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.name) }}
                                    {{ form_widget(form.name) }}
                                    {{ form_errors(form.name) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.slug) }}
                                    {{ form_widget(form.slug) }}
                                    {{ form_errors(form.slug) }}
                                    <div class="form-text">Identifiant unique pour le plan (ex: starter, professional)</div>
                                </div>
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.description) }}
                                {{ form_widget(form.description) }}
                                {{ form_errors(form.description) }}
                            </div>

                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    {{ form_label(form.monthlyPrice) }}
                                    <div class="input-group">
                                        {{ form_widget(form.monthlyPrice) }}
                                        <span class="input-group-text">FCFA</span>
                                    </div>
                                    {{ form_errors(form.monthlyPrice) }}
                                </div>
                                <div class="col-md-4 mb-3">
                                    {{ form_label(form.yearlyPrice) }}
                                    <div class="input-group">
                                        {{ form_widget(form.yearlyPrice) }}
                                        <span class="input-group-text">FCFA</span>
                                    </div>
                                    {{ form_errors(form.yearlyPrice) }}
                                </div>
                                <div class="col-md-4 mb-3">
                                    {{ form_label(form.currency) }}
                                    {{ form_widget(form.currency) }}
                                    {{ form_errors(form.currency) }}
                                </div>
                            </div>

                            <h6 class="mt-4 mb-3">Limites du Plan</h6>
                            <div class="row">
                                <div class="col-md-3 mb-3">
                                    {{ form_label(form.maxProperties) }}
                                    {{ form_widget(form.maxProperties) }}
                                    {{ form_errors(form.maxProperties) }}
                                    <div class="form-text">0 = illimité</div>
                                </div>
                                <div class="col-md-3 mb-3">
                                    {{ form_label(form.maxTenants) }}
                                    {{ form_widget(form.maxTenants) }}
                                    {{ form_errors(form.maxTenants) }}
                                    <div class="form-text">0 = illimité</div>
                                </div>
                                <div class="col-md-3 mb-3">
                                    {{ form_label(form.maxUsers) }}
                                    {{ form_widget(form.maxUsers) }}
                                    {{ form_errors(form.maxUsers) }}
                                    <div class="form-text">0 = illimité</div>
                                </div>
                                <div class="col-md-3 mb-3">
                                    {{ form_label(form.maxDocuments) }}
                                    {{ form_widget(form.maxDocuments) }}
                                    {{ form_errors(form.maxDocuments) }}
                                    <div class="form-text">0 = illimité</div>
                                </div>
                            </div>

                            <h6 class="mt-4 mb-3">Fonctionnalités</h6>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-check">
                                        {{ form_widget(form.features) }}
                                        {{ form_errors(form.features) }}
                                    </div>
                                </div>
                            </div>

                            <h6 class="mt-4 mb-3">Options</h6>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.sortOrder) }}
                                    {{ form_widget(form.sortOrder) }}
                                    {{ form_errors(form.sortOrder) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="form-check">
                                        {{ form_widget(form.isPopular) }}
                                        {{ form_label(form.isPopular) }}
                                        {{ form_errors(form.isPopular) }}
                                    </div>
                                    <div class="form-check">
                                        {{ form_widget(form.isActive) }}
                                        {{ form_label(form.isActive) }}
                                        {{ form_errors(form.isActive) }}
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex justify-content-end gap-2 mt-4">
                                <a href="{{ path('app_admin_plan_index') }}" class="btn btn-secondary">
                                    Annuler
                                </a>
                                {{ form_widget(form.save) }}
                            </div>

                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-header">
                            <h6 class="card-title mb-0">
                                <i class="bi bi-info-circle me-2"></i>
                                Informations
                            </h6>
                        </div>
                        <div class="card-body">
                            <h6>Conseils pour créer un plan :</h6>
                            <ul class="list-unstyled small">
                                <li><i class="bi bi-check-circle text-success me-2"></i>Choisissez un nom clair et descriptif</li>
                                <li><i class="bi bi-check-circle text-success me-2"></i>Le slug doit être unique et en minuscules</li>
                                <li><i class="bi bi-check-circle text-success me-2"></i>Définissez des limites réalistes</li>
                                <li><i class="bi bi-check-circle text-success me-2"></i>Sélectionnez les fonctionnalités appropriées</li>
                                <li><i class="bi bi-check-circle text-success me-2"></i>Utilisez l'ordre pour organiser l'affichage</li>
                            </ul>

                            <hr>

                            <h6>Fonctionnalités disponibles :</h6>
                            <ul class="list-unstyled small">
                                <li><strong>Base :</strong> dashboard, properties_management, tenants_management</li>
                                <li><strong>Avancées :</strong> accounting, maintenance_requests, reports</li>
                                <li><strong>Premium :</strong> api_access, custom_branding, priority_support</li>
                                <li><strong>Enterprise :</strong> environment_management, white_label, sso</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Validation du formulaire
(function() {
    'use strict';
    window.addEventListener('load', function() {
        var forms = document.getElementsByClassName('needs-validation');
        var validation = Array.prototype.filter.call(forms, function(form) {
            form.addEventListener('submit', function(event) {
                if (form.checkValidity() === false) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    }, false);
})();
</script>
{% endblock %}
