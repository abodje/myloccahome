{% extends 'base.html.twig' %}

{% block title %}Gestion des Plans d'Abonnement{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">
                    <i class="bi bi-credit-card me-2"></i>
                    Gestion des Plans d'Abonnement
                </h1>
                <a href="{{ path('app_admin_plan_new') }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>
                    Nouveau Plan
                </a>
            </div>

            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            <div class="row">
                {% for plan in plans %}
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100 {{ plan.isPopular ? 'border-primary' : '' }}">
                            {% if plan.isPopular %}
                                <div class="card-header bg-primary text-white">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h5 class="card-title mb-0">{{ plan.name }}</h5>
                                        <span class="badge bg-light text-primary">Populaire</span>
                                    </div>
                                </div>
                            {% else %}
                                <div class="card-header">
                                    <h5 class="card-title mb-0">{{ plan.name }}</h5>
                                </div>
                            {% endif %}

                            <div class="card-body">
                                <p class="card-text text-muted">{{ plan.description }}</p>

                                <div class="pricing mb-3">
                                    <div class="d-flex justify-content-between">
                                        <span>Mensuel :</span>
                                        <strong>{{ plan.monthlyPrice|number_format(0, ',', ' ') }} {{ plan.currency }}</strong>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <span>Annuel :</span>
                                        <strong>{{ plan.yearlyPrice|number_format(0, ',', ' ') }} {{ plan.currency }}</strong>
                                    </div>
                                </div>

                                <div class="limits mb-3">
                                    <small class="text-muted">Limites :</small>
                                    <ul class="list-unstyled small">
                                        <li><i class="bi bi-building me-1"></i> Propriétés : {{ plan.maxProperties ?: 'Illimité' }}</li>
                                        <li><i class="bi bi-people me-1"></i> Locataires : {{ plan.maxTenants ?: 'Illimité' }}</li>
                                        <li><i class="bi bi-person me-1"></i> Utilisateurs : {{ plan.maxUsers ?: 'Illimité' }}</li>
                                        <li><i class="bi bi-file-text me-1"></i> Documents : {{ plan.maxDocuments ?: 'Illimité' }}</li>
                                    </ul>
                                </div>

                                <div class="features mb-3">
                                    <small class="text-muted">Fonctionnalités :</small>
                                    <div class="mt-1">
                                        {% for feature in plan.features %}
                                            <span class="badge bg-secondary me-1 mb-1">{{ feature }}</span>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>

                            <div class="card-footer bg-transparent">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group" role="group">
                                        <a href="{{ path('app_admin_plan_show', {'id': plan.id}) }}"
                                           class="btn btn-outline-primary btn-sm">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="{{ path('app_admin_plan_edit', {'id': plan.id}) }}"
                                           class="btn btn-outline-secondary btn-sm">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    </div>

                                    <div class="btn-group" role="group">
                                        <form method="post" action="{{ path('app_admin_plan_toggle_popular', {'id': plan.id}) }}"
                                              class="d-inline">
                                            <button type="submit"
                                                    class="btn btn-outline-{{ plan.isPopular ? 'warning' : 'success' }} btn-sm">
                                                <i class="bi bi-star{{ plan.isPopular ? '-fill' : '' }}"></i>
                                            </button>
                                        </form>

                                        <form method="post" action="{{ path('app_admin_plan_delete', {'id': plan.id}) }}"
                                              class="d-inline"
                                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce plan ?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ plan.id) }}">
                                            <button type="submit" class="btn btn-outline-danger btn-sm">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-12">
                        <div class="alert alert-info text-center">
                            <i class="bi bi-info-circle me-2"></i>
                            Aucun plan d'abonnement trouvé.
                            <a href="{{ path('app_admin_plan_new') }}" class="alert-link">Créer le premier plan</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>

<style>
.card {
    transition: transform 0.2s ease-in-out;
}

.card:hover {
    transform: translateY(-2px);
}

.pricing {
    background-color: #f8f9fa;
    padding: 1rem;
    border-radius: 0.375rem;
}

.limits ul li {
    margin-bottom: 0.25rem;
}

.features .badge {
    font-size: 0.75rem;
}
</style>
{% endblock %}
