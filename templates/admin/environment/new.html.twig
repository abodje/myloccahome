{% extends 'base.html.twig' %}

{% block title %}Nouvel Environnement - Administration{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">
            <i class="bi bi-plus-circle me-2"></i>
            Nouvel Environnement
        </h1>
        <a href="{{ path('app_admin_environment_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>
            Retour à la liste
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Configuration de l'environnement</h5>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.name) }}
                                {{ form_widget(form.name) }}
                                {{ form_errors(form.name) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.type) }}
                                {{ form_widget(form.type) }}
                                {{ form_errors(form.type) }}
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.description) }}
                        {{ form_widget(form.description) }}
                        {{ form_errors(form.description) }}
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.domain) }}
                                {{ form_widget(form.domain) }}
                                {{ form_errors(form.domain) }}
                                {% if form.domain.vars.help %}
                                    <div class="form-text">{{ form.domain.vars.help }}</div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <div class="form-check">
                                    {{ form_widget(form.sslEnabled) }}
                                    {{ form_label(form.sslEnabled) }}
                                </div>
                                {{ form_errors(form.sslEnabled) }}
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <a href="{{ path('app_admin_environment_index') }}" class="btn btn-secondary">
                            Annuler
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-2"></i>
                            Créer l'environnement
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h6 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>
                        Informations
                    </h6>
                </div>
                <div class="card-body">
                    <h6>Types d'environnements :</h6>
                    <ul class="list-unstyled">
                        <li><span class="badge bg-danger me-2">Production</span> Environnement de production</li>
                        <li><span class="badge bg-warning me-2">Staging</span> Environnement de test</li>
                        <li><span class="badge bg-info me-2">Développement</span> Environnement de développement</li>
                    </ul>

                    <hr>

                    <h6>Configuration automatique :</h6>
                    <ul class="small">
                        <li>Génération automatique du sous-domaine</li>
                        <li>Configuration Apache/Nginx</li>
                        <li>Variables d'environnement</li>
                        <li>Certificat SSL (si activé)</li>
                    </ul>

                    <hr>

                    <div class="alert alert-info">
                        <i class="bi bi-lightbulb me-2"></i>
                        <strong>Astuce :</strong> Un sous-domaine sera généré automatiquement si vous ne spécifiez pas de domaine personnalisé.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
