{% extends 'base.html.twig' %}

{% block title %}Démo {{ demoCode }} - MYLOCCA{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-10">
                {% if demo %}
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <i class="bi bi-info-circle me-2"></i>
                                Informations sur la démo
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <h6><i class="bi bi-key me-2"></i>Code de la démo</h6>
                                    <p><code class="bg-light px-3 py-2 rounded fs-4">{{ demoCode }}</code></p>

                                    <h6><i class="bi bi-link me-2"></i>URL d'accès</h6>
                                    <p>
                                        <a href="{{ demo.demo_url }}" target="_blank" class="btn btn-outline-primary">
                                            <i class="bi bi-box-arrow-up-right me-2"></i>
                                            Ouvrir la démo
                                        </a>
                                        <button type="button" class="btn btn-outline-secondary ms-2"
                                                onclick="copyToClipboard('{{ demo.demo_url }}')" title="Copier l'URL">
                                            <i class="bi bi-clipboard"></i>
                                        </button>
                                    </p>

                                    <h6><i class="bi bi-calendar me-2"></i>Dates</h6>
                                    <ul class="list-unstyled">
                                        <li><strong>Créée le :</strong> {{ demo.created_at|date('d/m/Y à H:i') }}</li>
                                        <li><strong>Expire le :</strong>
                                            {% if demo.expires_at %}
                                                {{ demo.expires_at|date('d/m/Y à H:i') }}
                                            {% else %}
                                                <span class="text-muted">Non définie</span>
                                            {% endif %}
                                        </li>
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <h6><i class="bi bi-person me-2"></i>Propriétaire</h6>
                                    <p>
                                        <i class="bi bi-person-circle me-2"></i>
                                        {{ demo.user.firstName }} {{ demo.user.lastName }}
                                        <br>
                                        <small class="text-muted">{{ demo.user.email }}</small>
                                    </p>

                                    <h6><i class="bi bi-building me-2"></i>Organisation</h6>
                                    <p>
                                        <i class="bi bi-building me-2"></i>
                                        {{ demo.organization.name }}
                                    </p>

                                    <h6><i class="bi bi-shield-check me-2"></i>Statut</h6>
                                    <p>
                                        {% if isActive %}
                                            <span class="badge bg-success fs-6">
                                                <i class="bi bi-check-circle me-1"></i>
                                                Active
                                            </span>
                                        {% else %}
                                            <span class="badge bg-danger fs-6">
                                                <i class="bi bi-x-circle me-1"></i>
                                                Expirée
                                            </span>
                                        {% endif %}
                                    </p>
                                </div>
                            </div>

                            {% if isActive %}
                                <div class="alert alert-success mt-4">
                                    <i class="bi bi-check-circle me-2"></i>
                                    <strong>Démo active !</strong> Cette démo est accessible et fonctionnelle.
                                </div>
                            {% else %}
                                <div class="alert alert-danger mt-4">
                                    <i class="bi bi-x-circle me-2"></i>
                                    <strong>Démo expirée</strong> Cette démo n'est plus accessible.
                                </div>
                            {% endif %}

                            <div class="mt-4">
                                <h6><i class="bi bi-share me-2"></i>Partager cette démo</h6>
                                <p>Copiez et partagez cette URL avec vos clients pour qu'ils puissent accéder à la démo :</p>
                                <div class="input-group">
                                    <input type="text" class="form-control" value="{{ demo.demo_url }}" readonly id="demoUrl">
                                    <button class="btn btn-outline-secondary" type="button" onclick="copyToClipboard('{{ demo.demo_url }}')">
                                        <i class="bi bi-clipboard"></i> Copier
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Instructions d'utilisation -->
                    <div class="card mt-4">
                        <div class="card-header">
                            <h6 class="mb-0">
                                <i class="bi bi-question-circle me-2"></i>
                                Comment utiliser cette démo
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <h6><i class="bi bi-1-circle me-2"></i>Pour vous (propriétaire)</h6>
                                    <ul>
                                        <li>Cliquez sur "Ouvrir la démo" pour accéder à l'interface</li>
                                        <li>Vous serez automatiquement connecté en tant qu'administrateur</li>
                                        <li>Vous pouvez modifier les données et paramètres</li>
                                        <li>Partagez l'URL avec vos clients</li>
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <h6><i class="bi bi-2-circle me-2"></i>Pour vos clients</h6>
                                    <ul>
                                        <li>Ils cliquent sur l'URL que vous leur envoyez</li>
                                        <li>Ils accèdent directement à la démo</li>
                                        <li>Ils peuvent explorer toutes les fonctionnalités</li>
                                        <li>Ils n'ont pas besoin de créer de compte</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="card">
                        <div class="card-body text-center py-5">
                            <i class="bi bi-exclamation-triangle text-warning fs-1"></i>
                            <h5 class="text-muted mt-3">Démo introuvable</h5>
                            <p class="text-muted">La démo avec le code <code>{{ demoCode }}</code> n'existe pas ou a été supprimée.</p>
                            <a href="{{ path('app_home') }}" class="btn btn-primary">
                                <i class="bi bi-house me-2"></i>
                                Retour à l'accueil
                            </a>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(function() {
                // Créer un toast de succès
                const toast = document.createElement('div');
                toast.className = 'toast align-items-center text-white bg-success border-0';
                toast.setAttribute('role', 'alert');
                toast.innerHTML = `
                    <div class="d-flex">
                        <div class="toast-body">
                            <i class="bi bi-check-circle me-2"></i>
                            URL copiée dans le presse-papiers !
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                    </div>
                `;

                document.body.appendChild(toast);
                const bsToast = new bootstrap.Toast(toast);
                bsToast.show();

                // Supprimer le toast après qu'il soit caché
                toast.addEventListener('hidden.bs.toast', function() {
                    document.body.removeChild(toast);
                });
            });
        }
    </script>
{% endblock %}
