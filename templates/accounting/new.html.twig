{% extends 'base.html.twig' %}

{% block title %}Nouvelle écriture comptable - MYLOCCA{% endblock %}

{% block page_title %}
    <h5 class="mb-0">
        <i class="bi bi-calculator me-2"></i>
        Nouvelle écriture comptable
    </h5>
{% endblock %}

{% block page_actions %}
    <a href="{{ path('app_accounting_index') }}" class="btn btn-outline-secondary btn-sm">
        <i class="bi bi-arrow-left me-2"></i>
        Retour à la liste
    </a>
{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header" style="background-color: var(--primary-color); color: white;">
                    <h6 class="mb-0">
                        <i class="bi bi-plus-circle me-2"></i>
                        Créer une nouvelle écriture comptable
                    </h6>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.entryDate, {
                                'label': 'Date de l\'écriture',
                                'attr': {'class': 'form-control'}
                            }) }}
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.type, {
                                'label': 'Type',
                                'attr': {'class': 'form-select'},
                                'placeholder': 'Sélectionner un type'
                            }) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.category, {
                                'label': 'Catégorie',
                                'attr': {'class': 'form-select'},
                                'placeholder': 'Sélectionner une catégorie'
                            }) }}
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.amount, {
                                'label': 'Montant',
                                'attr': {'class': 'form-control', 'placeholder': '0.00'}
                            }) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.description, {
                            'label': 'Description',
                            'attr': {'class': 'form-control', 'rows': 3}
                        }) }}
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.reference, {
                                'label': 'Référence (optionnel)',
                                'attr': {'class': 'form-control', 'placeholder': 'Ex: FACTURE-2024-001'},
                                'required': false
                            }) }}
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            {% if form.tenant is defined %}
                                {{ form_row(form.tenant, {
                                    'label': 'Locataire (optionnel)',
                                    'attr': {'class': 'form-select'},
                                    'required': false
                                }) }}
                            {% endif %}
                        </div>
                    </div>

                    <div class="mb-3">
                        {% if form.property is defined %}
                            {{ form_row(form.property, {
                                'label': 'Propriété (optionnel)',
                                'attr': {'class': 'form-select'},
                                'required': false
                            }) }}
                        {% endif %}
                    </div>

                    <div class="mb-3">
                        {% if form.notes is defined %}
                            {{ form_row(form.notes, {
                                'label': 'Notes internes (optionnel)',
                                'attr': {'class': 'form-control', 'rows': 2},
                                'required': false
                            }) }}
                        {% endif %}
                    </div>

                    {{ form_rest(form) }}

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a href="{{ path('app_accounting_index') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-2"></i>
                            Annuler
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-2"></i>
                            Créer l'écriture
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>

            <!-- Aide contextuelle -->
            <div class="card mt-3">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>
                        Aide
                    </h6>
                </div>
                <div class="card-body">
                    <h6>Types d'écritures :</h6>
                    <ul>
                        <li><strong>Crédit :</strong> Entrée d'argent (loyers, paiements reçus, etc.)</li>
                        <li><strong>Débit :</strong> Sortie d'argent (factures, travaux, charges, etc.)</li>
                    </ul>
                    
                    <h6 class="mt-3">Catégories courantes :</h6>
                    <ul>
                        <li><strong>Loyer :</strong> Paiement de loyer par un locataire</li>
                        <li><strong>Charges :</strong> Charges locatives et frais divers</li>
                        <li><strong>Travaux :</strong> Dépenses de réparation et maintenance</li>
                        <li><strong>Assurance :</strong> Primes d'assurance</li>
                        <li><strong>Virement :</strong> Transferts bancaires</li>
                        <li><strong>Prélèvement :</strong> Paiements automatiques</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .card-header {
            font-weight: 600;
        }
        
        .form-label {
            font-weight: 500;
            color: #495057;
        }
        
        .bg-info {
            background-color: #0dcaf0 !important;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Validation côté client
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form[name="accounting_entry"]');
            if (form) {
                form.addEventListener('submit', function(e) {
                    const amountInput = form.querySelector('input[name*="[amount]"]');
                    if (amountInput && parseFloat(amountInput.value) <= 0) {
                        e.preventDefault();
                        alert('Le montant doit être supérieur à 0');
                        amountInput.focus();
                    }
                });
            }
        });
    </script>
{% endblock %}

