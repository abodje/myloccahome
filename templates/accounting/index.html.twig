{% extends 'base.html.twig' %}

{% block title %}Ma comptabilité - MYLOCCA{% endblock %}

{% block page_title %}
    <h5 class="mb-0">
        <i class="bi bi-calculator me-2"></i>
        Ma comptabilité
    </h5>
{% endblock %}

{% block page_actions %}
    <div class="d-flex gap-2">
        <a href="{{ path('app_accounting_export', {format: 'csv'}) }}" class="btn btn-outline-primary btn-sm">
            <i class="bi bi-download"></i> Exporter
        </a>
        <a href="{{ path('app_accounting_new') }}" class="btn btn-primary btn-sm">
            <i class="bi bi-plus-circle me-2"></i>
            Nouvelle écriture
        </a>
    </div>
{% endblock %}

{% block body %}
    <!-- Solde actuel -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <h6 class="text-muted mb-2">Solde actuel :</h6>
                    <h2 class="mb-0 {{ stats.current_balance >= 0 ? 'text-success' : 'text-danger' }}">
                        {{ stats.current_balance|currency }}
                    </h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtres -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <form method="GET" class="row g-3">
                        <div class="col-md-2">
                            <label class="form-label">Type</label>
                            <select name="type" class="form-select form-select-sm">
                                <option value="">Tous</option>
                                <option value="CREDIT" {{ current_type == 'CREDIT' ? 'selected' : '' }}>Crédits</option>
                                <option value="DEBIT" {{ current_type == 'DEBIT' ? 'selected' : '' }}>Débits</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Catégorie</label>
                            <select name="category" class="form-select form-select-sm">
                                <option value="">Toutes</option>
                                <option value="LOYER" {{ current_category == 'LOYER' ? 'selected' : '' }}>Loyer</option>
                                <option value="CHARGES" {{ current_category == 'CHARGES' ? 'selected' : '' }}>Charges</option>
                                <option value="TRAVAUX" {{ current_category == 'TRAVAUX' ? 'selected' : '' }}>Travaux</option>
                                <option value="ASSURANCE" {{ current_category == 'ASSURANCE' ? 'selected' : '' }}>Assurance</option>
                                <option value="VIREMENT" {{ current_category == 'VIREMENT' ? 'selected' : '' }}>Virement</option>
                                <option value="PRELEVEMENT" {{ current_category == 'PRELEVEMENT' ? 'selected' : '' }}>Prélèvement</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Année</label>
                            <select name="year" class="form-select form-select-sm">
                                {% for year in range(date().format('Y') - 2, date().format('Y') + 1) %}
                                    <option value="{{ year }}" {{ current_year == year ? 'selected' : '' }}>{{ year }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Mois</label>
                            <select name="month" class="form-select form-select-sm">
                                <option value="">Tous</option>
                                {% for month in 1..12 %}
                                    <option value="{{ month }}" {{ current_month == month ? 'selected' : '' }}>
                                        {{ month|date('F') }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-3 d-flex align-items-end">
                            <button type="submit" class="btn btn-outline-primary btn-sm me-2">
                                <i class="bi bi-funnel"></i> Filtrer
                            </button>
                            <a href="{{ path('app_accounting_index') }}" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-x-circle"></i> Reset
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Tableau comptable -->
    <div class="card">
        <div class="card-header" style="background-color: var(--primary-color); color: white;">
            <div class="row">
                <div class="col-2"><strong>Date</strong></div>
                <div class="col-6"><strong>Intitulé</strong></div>
                <div class="col-4 text-end"><strong>Montant</strong></div>
            </div>
        </div>
        <div class="card-body p-0">
            {% if entries|length > 0 %}
                {% for entry in entries %}
                    <div class="row align-items-center p-3 border-bottom {{ loop.index is odd ? 'bg-light' : '' }}">
                        <div class="col-2">
                            <small class="text-muted">{{ entry.entryDate|date('d/m/Y') }}</small>
                        </div>
                        <div class="col-6">
                            <div>
                                <strong>{{ entry.description|upper }}</strong>
                                {% if entry.reference %}
                                    <br><small class="text-muted">Réf: {{ entry.reference }}</small>
                                {% endif %}
                                {% if entry.property %}
                                    <br><small class="text-muted">{{ entry.property.fullAddress }}</small>
                                {% endif %}
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <span class="fw-bold text-{{ entry.amountColor }}">
                                {{ entry.formattedAmount }}
                            </span>
                            {% if entry.runningBalance is not null %}
                                <br><small class="text-muted">
                                    Solde: {{ entry.runningBalance|currency }}
                                </small>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <div class="text-center p-5">
                    <i class="bi bi-calculator display-1 text-muted"></i>
                    <h5 class="mt-3 text-muted">Aucune écriture comptable trouvée</h5>
                    <p class="text-muted">Commencez par créer votre première écriture comptable.</p>
                    <a href="{{ path('app_accounting_new') }}" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-2"></i>
                        Créer une écriture
                    </a>
                </div>
            {% endif %}
        </div>
    </div>

    <!-- Statistiques du mois -->
    {% if stats %}
        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h6 class="text-muted">Crédits du mois</h6>
                        <h4 class="text-success">+{{ stats.monthly_credits|currency }}</h4>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h6 class="text-muted">Débits du mois</h6>
                        <h4 class="text-danger">-{{ stats.monthly_debits|currency }}</h4>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h6 class="text-muted">Résultat du mois</h6>
                        <h4 class="{{ stats.monthly_net >= 0 ? 'text-success' : 'text-danger' }}">
                            {{ stats.monthly_net >= 0 ? '+' : '' }}{{ stats.monthly_net|currency }}
                        </h4>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h6 class="text-muted">Total écritures</h6>
                        <h4 class="text-info">{{ stats.total_entries }}</h4>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .card-header {
            font-weight: 600;
        }

        .border-bottom:last-child {
            border-bottom: none !important;
        }

        .text-success {
            color: #198754 !important;
        }

        .text-danger {
            color: #dc3545 !important;
        }

        .bg-light {
            background-color: #f8f9fa !important;
        }
    </style>
{% endblock %}
