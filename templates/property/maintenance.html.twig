{% extends 'base.html.twig' %}

{% block title %}Maintenance - {{ property.getFullAddress() }} - MYLOCCA{% endblock %}

{% block page_title %}
    <h5 class="mb-0">
        <i class="bi bi-tools me-2"></i>
        Maintenance - {{ property.getFullAddress() }}
    </h5>
{% endblock %}

{% block page_actions %}
    <a href="{{ path('app_property_show', {'id': property.id}) }}" class="btn btn-outline-secondary btn-sm">
        <i class="bi bi-arrow-left"></i> Retour au bien
    </a>
    <a href="{{ path('app_maintenance_request_new', {'property_id': property.id}) }}" class="btn btn-primary btn-sm">
        <i class="bi bi-plus-circle"></i> Nouvelle demande
    </a>
{% endblock %}

{% block body %}
    <div class="row">
        <!-- Informations du bien -->
        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-house me-2"></i>
                        Informations du bien
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong>Adresse :</strong><br>
                        {{ property.getFullAddress() }}
                    </div>

                    {% if property.propertyType %}
                    <div class="mb-3">
                        <strong>Type :</strong> {{ property.propertyType }}
                    </div>
                    {% endif %}

                    {% if property.surface %}
                    <div class="mb-3">
                        <strong>Surface :</strong> {{ property.surface }} m²
                    </div>
                    {% endif %}

                    {% if property.rooms %}
                    <div class="mb-3">
                        <strong>Pièces :</strong> {{ property.rooms }}
                    </div>
                    {% endif %}

                    {% if property.owner %}
                    <div class="mb-3">
                        <strong>Propriétaire :</strong><br>
                        {{ property.owner.fullName }}
                    </div>
                    {% endif %}

                    {% if property.getCurrentLease() %}
                    <div class="mb-3">
                        <strong>Locataire actuel :</strong><br>
                        {{ property.getCurrentLease().tenant.fullName }}
                    </div>
                    {% endif %}

                    <div class="mb-3">
                        <strong>Statut :</strong>
                        <span class="badge bg-{{ property.status == 'Occupé' ? 'success' : (property.status == 'Libre' ? 'warning' : 'secondary') }}">
                            {{ property.status }}
                        </span>
                    </div>
                </div>
            </div>

            <!-- Statistiques de maintenance -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-graph-up me-2"></i>
                        Statistiques
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <div class="border-end">
                                <h4 class="text-primary mb-1">0</h4>
                                <small class="text-muted">Demandes ouvertes</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <h4 class="text-success mb-1">0</h4>
                            <small class="text-muted">Demandes résolues</small>
                        </div>
                    </div>

                    <hr>

                    <div class="row text-center">
                        <div class="col-6">
                            <div class="border-end">
                                <h4 class="text-warning mb-1">0</h4>
                                <small class="text-muted">En cours</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <h4 class="text-info mb-1">0</h4>
                            <small class="text-muted">Total</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Actions rapides -->
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-lightning me-2"></i>
                        Actions rapides
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="{{ path('app_maintenance_request_new', {'property_id': property.id}) }}" class="btn btn-primary">
                            <i class="bi bi-plus-circle me-2"></i>
                            Nouvelle demande
                        </a>

                        <a href="{{ path('app_property_inventories', {'id': property.id}) }}" class="btn btn-outline-secondary">
                            <i class="bi bi-clipboard-check me-2"></i>
                            Inventaires
                        </a>

                        <a href="{{ path('app_property_documents', {'id': property.id}) }}" class="btn btn-outline-secondary">
                            <i class="bi bi-file-text me-2"></i>
                            Documents
                        </a>

                        <a href="{{ path('app_property_edit', {'id': property.id}) }}" class="btn btn-outline-secondary">
                            <i class="bi bi-pencil-square me-2"></i>
                            Modifier le bien
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Liste des demandes de maintenance -->
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">
                        <i class="bi bi-list-ul me-2"></i>
                        Demandes de maintenance
                    </h6>
                    <div class="btn-group btn-group-sm" role="group">
                        <input type="radio" class="btn-check" name="filter" id="all" autocomplete="off" checked>
                        <label class="btn btn-outline-secondary" for="all">Toutes</label>

                        <input type="radio" class="btn-check" name="filter" id="open" autocomplete="off">
                        <label class="btn btn-outline-warning" for="open">Ouvertes</label>

                        <input type="radio" class="btn-check" name="filter" id="in-progress" autocomplete="off">
                        <label class="btn btn-outline-info" for="in-progress">En cours</label>

                        <input type="radio" class="btn-check" name="filter" id="completed" autocomplete="off">
                        <label class="btn btn-outline-success" for="completed">Résolues</label>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Message si aucune demande -->
                    <div class="text-center py-5">
                        <i class="bi bi-tools text-muted" style="font-size: 3rem;"></i>
                        <h5 class="text-muted mt-3">Aucune demande de maintenance</h5>
                        <p class="text-muted">Il n'y a pas encore de demande de maintenance pour ce bien.</p>
                        <a href="{{ path('app_maintenance_request_new', {'property_id': property.id}) }}" class="btn btn-primary">
                            <i class="bi bi-plus-circle me-2"></i>
                            Créer la première demande
                        </a>
                    </div>

                    <!-- Template pour les demandes (sera rempli dynamiquement) -->
                    <div class="maintenance-requests" style="display: none;">
                        <!-- Les demandes de maintenance seront affichées ici -->
                    </div>
                </div>
            </div>

            <!-- Historique des interventions -->
            <div class="card mt-4">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-clock-history me-2"></i>
                        Historique des interventions
                    </h6>
                </div>
                <div class="card-body">
                    <div class="text-center py-4">
                        <i class="bi bi-clock-history text-muted" style="font-size: 2rem;"></i>
                        <p class="text-muted mt-2">Aucun historique d'intervention disponible</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal pour les détails d'une demande -->
    <div class="modal fade" id="maintenanceModal" tabindex="-1" aria-labelledby="maintenanceModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="maintenanceModalLabel">Détails de la demande</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Contenu dynamique -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                    <button type="button" class="btn btn-primary">Modifier</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Filtrage des demandes de maintenance
        document.querySelectorAll('input[name="filter"]').forEach(radio => {
            radio.addEventListener('change', function() {
                const filter = this.id;
                console.log('Filtre sélectionné:', filter);
                // Ici vous pouvez ajouter la logique de filtrage
            });
        });

        // Fonction pour charger les demandes de maintenance
        function loadMaintenanceRequests() {
            // Cette fonction sera implémentée pour charger les données via AJAX
            console.log('Chargement des demandes de maintenance pour le bien:', {{ property.id }});
        }

        // Charger les données au chargement de la page
        document.addEventListener('DOMContentLoaded', function() {
            loadMaintenanceRequests();
        });
    </script>
{% endblock %}
