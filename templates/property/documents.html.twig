{% extends 'base.html.twig' %}

{% block title %}Documents - {{ property.getFullAddress() }}{% endblock %}

{% block page_title %}
    <h5 class="mb-0">
        <i class="bi bi-file-earmark-text me-2"></i>
        Documents - {{ property.getFullAddress() }}
    </h5>
{% endblock %}

{% block page_actions %}
    <a href="{{ path('app_property_show', {id: property.id}) }}" class="btn btn-outline-secondary btn-sm">
        <i class="bi bi-arrow-left"></i> Retour
    </a>
    <a href="{{ path('app_document_new', {property: property.id}) }}" class="btn btn-primary btn-sm">
        <i class="bi bi-plus-circle"></i> Ajouter un document
    </a>
{% endblock %}

{% block body %}
    <!-- Informations du bien -->
    <div class="row mb-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-house me-2"></i>
                        Informations du bien
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <strong>Adresse :</strong><br>
                            {{ property.getFullAddress() }}
                        </div>
                        <div class="col-md-3">
                            <strong>Type :</strong><br>
                            {{ property.propertyType ?: 'Non renseigné' }}
                        </div>
                        <div class="col-md-3">
                            <strong>Surface :</strong><br>
                            {{ property.surface ? property.surface ~ ' m²' : 'Non renseigné' }}
                        </div>
                    </div>
                    {% if property.description %}
                    <div class="mt-3">
                        <strong>Description :</strong><br>
                        <small class="text-muted">{{ property.description }}</small>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-graph-up me-2"></i>
                        Statistiques
                    </h6>
                </div>
                <div class="card-body text-center">
                    <h4 class="text-primary mb-1">{{ documents|length }}</h4>
                    <small class="text-muted">Document{{ documents|length > 1 ? 's' : '' }}</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Documents -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h6 class="mb-0">
                <i class="bi bi-file-earmark-text me-2"></i>
                Documents de la propriété
            </h6>
            <a href="{{ path('app_document_new', {property: property.id}) }}" class="btn btn-primary btn-sm">
                <i class="bi bi-plus-circle me-2"></i>
                Ajouter un document
            </a>
        </div>
        <div class="card-body">
            {% if documents is defined and documents is not empty %}
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Type</th>
                                <th>Nom</th>
                                <th>Description</th>
                                <th>Date</th>
                                <th>Taille</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for document in documents %}
                                <tr>
                                    <td>
                                        {% if document.type %}
                                            {% if 'pdf' in document.type|lower %}
                                                <i class="bi bi-file-pdf text-danger"></i>
                                            {% elseif 'image' in document.type|lower or 'jpg' in document.type|lower or 'png' in document.type|lower %}
                                                <i class="bi bi-file-image text-primary"></i>
                                            {% elseif 'word' in document.type|lower or 'doc' in document.type|lower %}
                                                <i class="bi bi-file-word text-info"></i>
                                            {% elseif 'excel' in document.type|lower or 'xls' in document.type|lower %}
                                                <i class="bi bi-file-excel text-success"></i>
                                            {% else %}
                                                <i class="bi bi-file-earmark text-secondary"></i>
                                            {% endif %}
                                            {{ document.type }}
                                        {% else %}
                                            <i class="bi bi-file-earmark text-secondary"></i>
                                            Document
                                        {% endif %}
                                    </td>
                                    <td>
                                        <strong>{{ document.name ?: 'Sans nom' }}</strong>
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            {{ document.description ?: 'Aucune description' }}
                                        </small>
                                    </td>
                                    <td>
                                        {% if document.createdAt %}
                                            {{ document.createdAt|date('d/m/Y H:i') }}
                                        {% else %}
                                            <span class="text-muted">N/A</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if document.fileSize %}
                                            {{ (document.fileSize / 1024)|round(1) }} KB
                                        {% else %}
                                            <span class="text-muted">N/A</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            {% if document.fileName %}
                                                <a href="{{ asset('uploads/documents/' ~ document.fileName) }}"
                                                   class="btn btn-outline-success"
                                                   title="Télécharger"
                                                   download>
                                                    <i class="bi bi-download"></i>
                                                </a>
                                            {% endif %}
                                            {% if document.id %}
                                                <a href="{{ path('app_document_show', {id: document.id}) }}"
                                                   class="btn btn-outline-primary"
                                                   title="Voir détails">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                            {% endif %}
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted"></i>
                    <h5 class="text-muted mt-3">Aucun document</h5>
                    <p class="text-muted">Il n'y a pas encore de document pour cette propriété.</p>
                    <a href="{{ path('app_document_new', {property: property.id}) }}" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-2"></i>
                        Ajouter le premier document
                    </a>
                </div>
            {% endif %}
        </div>
    </div>

    <!-- Actions rapides -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-lightning me-2"></i>
                        Actions rapides
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <a href="{{ path('app_property_show', {id: property.id}) }}" class="btn btn-outline-primary w-100">
                                <i class="bi bi-eye me-2"></i>
                                Voir le bien
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="{{ path('app_property_edit', {id: property.id}) }}" class="btn btn-outline-secondary w-100">
                                <i class="bi bi-pencil-square me-2"></i>
                                Modifier le bien
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="{{ path('app_property_maintenance', {id: property.id}) }}" class="btn btn-outline-warning w-100">
                                <i class="bi bi-tools me-2"></i>
                                Maintenance
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="{{ path('app_property_inventories', {id: property.id}) }}" class="btn btn-outline-info w-100">
                                <i class="bi bi-clipboard-check me-2"></i>
                                Inventaires
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

