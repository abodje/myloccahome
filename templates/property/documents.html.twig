{% extends 'base.html.twig' %}

{% block title %}Documents - {{ property.fullAddress }}{% endblock %}

{% block page_title %}
    <h5 class="mb-0">
        <i class="bi bi-file-earmark-text me-2"></i>
        Documents - {{ property.fullAddress }}
    </h5>
{% endblock %}

{% block page_actions %}
    <a href="{{ path('app_property_show', {id: property.id}) }}" class="btn btn-outline-secondary btn-sm">
        <i class="bi bi-arrow-left"></i> Retour
    </a>
    <a href="{{ path('app_document_new', {property: property.id}) }}" class="btn btn-primary btn-sm">
        <i class="bi bi-plus-circle"></i> Ajouter un document
    </a>
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h6 class="mb-0">Documents de la propriété</h6>
        </div>
        <div class="card-body">
            {% if documents is empty %}
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted"></i>
                    <p class="text-muted mt-3">Aucun document pour cette propriété</p>
                    <a href="{{ path('app_document_new', {property: property.id}) }}" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Ajouter le premier document
                    </a>
                </div>
            {% else %}
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Type</th>
                                <th>Nom</th>
                                <th>Date</th>
                                <th>Taille</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for document in documents %}
                                <tr>
                                    <td>
                                        {% if document.isPdf %}
                                            <i class="bi bi-file-pdf text-danger"></i>
                                        {% elseif document.isImage %}
                                            <i class="bi bi-file-image text-primary"></i>
                                        {% else %}
                                            <i class="bi bi-file-earmark text-secondary"></i>
                                        {% endif %}
                                        {{ document.type }}
                                    </td>
                                    <td>{{ document.name }}</td>
                                    <td>{{ document.createdAt|date('d/m/Y') }}</td>
                                    <td>{{ document.fileSizeFormatted }}</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="{{ path('app_document_show', {id: document.id}) }}" class="btn btn-outline-primary" title="Voir">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="{{ asset('uploads/documents/' ~ document.fileName) }}" class="btn btn-outline-success" title="Télécharger" download>
                                                <i class="bi bi-download"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

