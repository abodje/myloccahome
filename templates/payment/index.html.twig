{% extends 'base.html.twig' %}

{% block title %}Mes paiements - MYLOCCA{% endblock %}

{% block page_title %}
    <h5 class="mb-0">
        <i class="bi bi-credit-card me-2"></i>
        Historique des paiements
    </h5>
{% endblock %}

{% block page_actions %}
    <a href="{{ path('app_payment_new') }}" class="btn btn-primary btn-sm">
        <i class="bi bi-plus-circle me-2"></i>
        Nouveau paiement
    </a>
{% endblock %}

{% block body %}
    <!-- Solde actuel -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <h6 class="text-muted mb-2">Solde actuel :</h6>
                    <h2 class="mb-0 text-success">{{ 0|currency }}</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtres -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <form method="GET" class="row g-3">
                        <div class="col-md-2">
                            <label class="form-label">Statut</label>
                            <select name="status" class="form-select form-select-sm">
                                <option value="">Tous</option>
                                <option value="Payé" {{ current_status == 'Payé' ? 'selected' : '' }}>Payés</option>
                                <option value="En attente" {{ current_status == 'En attente' ? 'selected' : '' }}>En attente</option>
                                <option value="En retard" {{ current_status == 'En retard' ? 'selected' : '' }}>En retard</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Type</label>
                            <select name="type" class="form-select form-select-sm">
                                <option value="">Tous</option>
                                <option value="Loyer" {{ current_type == 'Loyer' ? 'selected' : '' }}>Loyer</option>
                                <option value="Charges" {{ current_type == 'Charges' ? 'selected' : '' }}>Charges</option>
                                <option value="Caution" {{ current_type == 'Caution' ? 'selected' : '' }}>Caution</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Année</label>
                            <select name="year" class="form-select form-select-sm">
                                {% for year in range(date().format('Y') - 2, date().format('Y') + 1) %}
                                    <option value="{{ year }}" {{ current_year == year ? 'selected' : '' }}>{{ year }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Mois</label>
                            <select name="month" class="form-select form-select-sm">
                                <option value="">Tous</option>
                                {% for month in 1..12 %}
                                    <option value="{{ month }}" {{ current_month == month ? 'selected' : '' }}>
                                        {{ ('2024-' ~ month ~ '-01')|date('F') }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-4 d-flex align-items-end">
                            <button type="submit" class="btn btn-outline-primary btn-sm me-2">
                                <i class="bi bi-funnel"></i> Filtrer
                            </button>
                            <a href="{{ path('app_payment_index') }}" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-x-circle"></i> Reset
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Tableau des paiements -->
    <div class="card mb-4">
        <div class="card-header" style="background-color: var(--primary-color); color: white;">
            <div class="row">
                <div class="col-2"><strong>Date</strong></div>
                <div class="col-3"><strong>Intitulé</strong></div>
                <div class="col-2"><strong>Date d'échéance</strong></div>
                <div class="col-2"><strong>Montant</strong></div>
                <div class="col-2"><strong>Statut</strong></div>
                <div class="col-1"><strong>Actions</strong></div>
            </div>
        </div>
        <div class="card-body p-0">
            {% if payments|length > 0 %}
                {% for payment in payments %}
                    <div class="row align-items-center p-3 border-bottom {{ loop.index is odd ? 'bg-light' : '' }}">
                        <div class="col-2">
                            <small class="text-muted">{{ payment.createdAt|date('d/m/Y') }}</small>
                        </div>
                        <div class="col-3">
                            <strong>{{ payment.type }}</strong>
                            {% if payment.lease and payment.lease.tenant %}
                                <br><small class="text-muted">{{ payment.lease.tenant.fullName }}</small>
                            {% endif %}
                        </div>
                        <div class="col-2">
                            <small class="text-muted">{{ payment.dueDate|date('d/m/Y') }}</small>
                        </div>
                        <div class="col-2">
                            <strong>{{ payment.amount|currency }}</strong>
                        </div>
                        <div class="col-2">
                            {% if payment.status == 'Payé' %}
                                <span class="badge bg-success">Validé</span>
                            {% elseif payment.isOverdue %}
                                <span class="badge bg-danger">Erreur</span>
                            {% else %}
                                <span class="badge bg-warning">En attente</span>
                            {% endif %}
                        </div>
                        <div class="col-1">
                            <a href="{{ path('app_payment_show', {id: payment.id}) }}"
                               class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-eye"></i>
                            </a>
                        </div>
                    </div>
                {% endfor %}

                <!-- Pagination -->
                <div class="d-flex justify-content-center p-3">
                    <nav>
                        <ul class="pagination pagination-sm">
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            {% else %}
                <div class="text-center p-5">
                    <i class="bi bi-credit-card display-1 text-muted"></i>
                    <h5 class="mt-3 text-muted">Aucun paiement trouvé</h5>
                    <p class="text-muted">Commencez par créer votre premier paiement.</p>
                    <a href="{{ path('app_payment_new') }}" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-2"></i>
                        Créer un paiement
                    </a>
                </div>
            {% endif %}
        </div>
    </div>

    <!-- Section moyens de paiement -->
    <div class="card">
        <div class="card-header">
            <h6 class="mb-0">
                <i class="bi bi-credit-card me-2"></i>
                Choisissez votre moyen de paiement
            </h6>
        </div>
        <div class="card-body">
            <div class="row g-4">
                <!-- Prélèvement automatique -->
                <div class="col-md-4">
                    <div class="card h-100 payment-method-card">
                        <div class="card-body text-center">
                            <i class="bi bi-arrow-repeat display-4 text-primary mb-3"></i>
                            <h6 class="card-title">Prélèvement automatique</h6>
                            <div class="mt-3">
                                <p class="text-muted small mb-2">NOM</p>
                                <p class="fw-bold mb-2">M ABODJE Kouame Paul Arnaud</p>
                                <p class="text-muted small mb-2">IBAN</p>
                                <p class="font-monospace small">FR** **** **** **** **** 053</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- E-paiement à la demande -->
                <div class="col-md-4">
                    <div class="card h-100 payment-method-card">
                        <div class="card-body text-center">
                            <i class="bi bi-phone display-4 text-info mb-3"></i>
                            <h6 class="card-title">E-paiement à la demande</h6>
                            <p class="text-muted small mt-3">
                                Vous avez souscrit au E-paiement à la demande : à chaque nouvelle échéance,
                                vous validez le montant de votre règlement.
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Virement -->
                <div class="col-md-4">
                    <div class="card h-100 payment-method-card position-relative">
                        <div class="card-body text-center">
                            <span class="badge bg-primary position-absolute top-0 start-50 translate-middle">
                                Nouveau
                            </span>
                            <i class="bi bi-bank display-4 text-success mb-3"></i>
                            <h6 class="card-title">Virement</h6>
                            <p class="text-muted small mt-3">
                                Découvrez une solution simple de paiement par virement que vous
                                initiez via votre application bancaire.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .payment-method-card {
            cursor: pointer;
            transition: all 0.3s ease;
            border: 2px solid transparent;
        }

        .payment-method-card:hover {
            border-color: var(--bs-primary);
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .badge.bg-success {
            background-color: #198754 !important;
        }

        .badge.bg-danger {
            background-color: #dc3545 !important;
        }

        .badge.bg-warning {
            background-color: #ffc107 !important;
            color: #000 !important;
        }

        .font-monospace {
            font-family: 'Courier New', monospace;
        }
    </style>
{% endblock %}
