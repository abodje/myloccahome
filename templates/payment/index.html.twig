{% extends 'base.html.twig' %}

{% block title %}Mes paiements - MYLOCCA{% endblock %}

{% block page_title %}
    <h5 class="mb-0">
        <i class="bi bi-credit-card me-2"></i>
        Historique des paiements
    </h5>
{% endblock %}

{% block page_actions %}
    {% if is_granted('ROLE_TENANT') and app_setting('allow_advance_payments', true) %}
        <a href="{{ path('app_online_payment_pay_advance') }}" class="btn btn-success btn-sm me-2">
            <i class="bi bi-piggy-bank me-2"></i>
            Payer un acompte
        </a>
    {% endif %}

    {% if not is_granted('ROLE_TENANT') %}
        <a href="{{ path('app_payment_new') }}" class="btn btn-primary btn-sm">
            <i class="bi bi-plus-circle me-2"></i>
            Nouveau paiement
        </a>
    {% endif %}
{% endblock %}

{% block body %}
    <!-- Paiements en attente -->
    {% set pendingPayments = payments|filter(p => p.status == 'En attente') %}
    {% if pendingPayments|length > 0 %}
    <div class="row mb-4">
        <div class="col-12">
            <div class="alert alert-warning">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="alert-heading mb-1">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            {{ pendingPayments|length }} paiement(s) en attente
                        </h6>
                        <p class="mb-0">Vous avez des √©ch√©ances √† r√©gler. Cliquez sur les boutons verts pour payer en ligne.</p>
                    </div>
                    <div class="text-end">
                        <strong>Total √† payer :
                            {% set total = 0 %}
                            {% for payment in pendingPayments %}
                                {% set total = total + payment.amount %}
                            {% endfor %}
                            {{ total|currency }}
                        </strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    <!-- Solde actuel -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <h6 class="text-muted mb-2">Solde actuel :</h6>
                    <h2 class="mb-0 {{ current_balance >= 0 ? 'text-success' : 'text-danger' }}">
                        {{ current_balance|currency }}
                    </h2>
                    {% if current_balance < 0 %}
                    <small class="text-danger">
                        <i class="bi bi-exclamation-circle"></i>
                        Vous avez un solde d√©biteur
                    </small>
                    {% elseif current_balance > 0 %}
                    <small class="text-success">
                        <i class="bi bi-check-circle"></i>
                        Vous avez un cr√©dit disponible
                    </small>
                    {% else %}
                    <small class="text-muted">
                        <i class="bi bi-dash-circle"></i>
                        Votre compte est √† jour
                    </small>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Carte d'information pour les acomptes (Locataires uniquement) -->
    {% if is_granted('ROLE_TENANT') and app_setting('allow_advance_payments', true) %}
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-success">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-1 text-center">
                            <i class="bi bi-piggy-bank text-success" style="font-size: 3rem;"></i>
                        </div>
                        <div class="col-md-8">
                            <h5 class="card-title text-success mb-2">
                                <i class="bi bi-info-circle me-2"></i>Paiements en avance disponibles
                            </h5>
                            <p class="card-text mb-0">
                                Vous pouvez effectuer des <strong>paiements en avance (acomptes)</strong> pour faciliter la gestion de votre budget.
                                Ces acomptes seront automatiquement appliqu√©s √† vos prochaines √©ch√©ances de loyer.
                            </p>
                            <small class="text-muted">
                                üí° <strong>Avantage :</strong> Payez quand vous le pouvez, nous d√©duisons automatiquement de vos futurs loyers !
                            </small>
                        </div>
                        <div class="col-md-3 text-end">
                            <a href="{{ path('app_online_payment_pay_advance') }}" class="btn btn-success">
                                <i class="bi bi-piggy-bank me-2"></i>
                                Payer un acompte
                            </a>
                            {% if advance_stats.total_available|default(0) > 0 %}
                            <div class="mt-2">
                                <small class="text-success">
                                    <i class="bi bi-check-circle"></i>
                                    Solde acompte disponible : <strong>{{ advance_stats.total_available|currency }}</strong>
                                </small>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    <!-- Filtres -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <form method="GET" class="row g-3">
                        <div class="col-md-2">
                            <label class="form-label">Statut</label>
                            <select name="status" class="form-select form-select-sm">
                                <option value="">Tous</option>
                                <option value="Pay√©" {{ current_status == 'Pay√©' ? 'selected' : '' }}>Pay√©s</option>
                                <option value="En attente" {{ current_status == 'En attente' ? 'selected' : '' }}>En attente</option>
                                <option value="En retard" {{ current_status == 'En retard' ? 'selected' : '' }}>En retard</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Type</label>
                            <select name="type" class="form-select form-select-sm">
                                <option value="">Tous</option>
                                <option value="Loyer" {{ current_type == 'Loyer' ? 'selected' : '' }}>Loyer</option>
                                <option value="Charges" {{ current_type == 'Charges' ? 'selected' : '' }}>Charges</option>
                                <option value="Caution" {{ current_type == 'Caution' ? 'selected' : '' }}>Caution</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Ann√©e</label>
                            <select name="year" class="form-select form-select-sm">
                                {% for year in range(date().format('Y') - 2, date().format('Y') + 1) %}
                                    <option value="{{ year }}" {{ current_year == year ? 'selected' : '' }}>{{ year }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Mois</label>
                            <select name="month" class="form-select form-select-sm">
                                <option value="">Tous</option>
                                {% for month in 1..12 %}
                                    <option value="{{ month }}" {{ current_month == month ? 'selected' : '' }}>
                                        {{ ('2024-' ~ month ~ '-01')|date('F') }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-4 d-flex align-items-end">
                            <button type="submit" class="btn btn-outline-primary btn-sm me-2">
                                <i class="bi bi-funnel"></i> Filtrer
                            </button>
                            <a href="{{ path('app_payment_index') }}" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-x-circle"></i> Reset
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Tableau des paiements -->
    <div class="card mb-4">
        <div class="card-header" style="background-color: var(--primary-color); color: white;">
            <div class="row">
                <div class="col-2"><strong>Date</strong></div>
                <div class="col-3"><strong>Intitul√©</strong></div>
                <div class="col-2"><strong>Date d'√©ch√©ance</strong></div>
                <div class="col-2"><strong>Montant</strong></div>
                <div class="col-2"><strong>Statut</strong></div>
                <div class="col-1"><strong>Actions</strong></div>
            </div>
        </div>
        <div class="card-body p-0">
            {% if payments|length > 0 %}
                {% for payment in payments %}
                    <div class="row align-items-center p-3 border-bottom {{ loop.index is odd ? 'bg-light' : '' }}">
                        <div class="col-2">
                            <small class="text-muted">{{ payment.createdAt|date('d/m/Y') }}</small>
                        </div>
                        <div class="col-3">
                            <strong>{{ payment.type }}</strong>
                            {% if payment.lease and payment.lease.tenant %}
                                <br><small class="text-muted">{{ payment.lease.tenant.fullName }}</small>
                            {% endif %}
                        </div>
                        <div class="col-2">
                            <small class="text-muted">{{ payment.dueDate|date('d/m/Y') }}</small>
                        </div>
                        <div class="col-2">
                            <strong>{{ payment.amount|currency }}</strong>
                        </div>
                        <div class="col-2">
                            {% if payment.status == 'Pay√©' %}
                                <span class="badge bg-success">Valid√©</span>
                            {% elseif payment.isOverdue %}
                                <span class="badge bg-danger">Erreur</span>
                            {% else %}
                                <span class="badge bg-warning">En attente</span>
                            {% endif %}
                        </div>
                        <div class="col-1">
                            <div class="btn-group btn-group-sm">
                                <a href="{{ path('app_payment_show', {id: payment.id}) }}"
                                   class="btn btn-outline-primary" title="Voir les d√©tails">
                                    <i class="bi bi-eye"></i>
                                </a>

                                {% if payment.status == 'Pay√©' %}
                                    <form method="POST" action="{{ path('app_document_generate_receipt', {'paymentId': payment.id}) }}" class="d-inline">
                                        <button type="submit" class="btn btn-outline-success" title="G√©n√©rer une quittance">
                                            <i class="bi bi-file-earmark-pdf"></i>
                                        </button>
                                    </form>
                                {% elseif payment.status == 'En attente' %}
                                    <form method="POST" action="{{ path('app_document_generate_notice', {'paymentId': payment.id}) }}" class="d-inline">
                                        <button type="submit" class="btn btn-outline-warning" title="G√©n√©rer un avis d'√©ch√©ance">
                                            <i class="bi bi-file-earmark-text"></i>
                                        </button>
                                    </form>
                                {% endif %}

                                {% if payment.status == 'En attente' %}
                                    <a href="{{ path('app_online_payment_tenant_page', {id: payment.id}) }}"
                                       class="btn btn-success" title="Payer en ligne">
                                        <i class="bi bi-credit-card"></i>
                                    </a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}

                <!-- Pagination -->
                <div class="d-flex justify-content-center p-3">
                    <nav>
                        <ul class="pagination pagination-sm">
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            {% else %}
                <div class="text-center p-5">
                    <i class="bi bi-credit-card display-1 text-muted"></i>
                    <h5 class="mt-3 text-muted">Aucun paiement trouv√©</h5>
                    <p class="text-muted">Commencez par cr√©er votre premier paiement.</p>
                    <a href="{{ path('app_payment_new') }}" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-2"></i>
                        Cr√©er un paiement
                    </a>
                </div>
            {% endif %}
        </div>
    </div>

    <!-- Section moyens de paiement -->
    <div class="card">
        <div class="card-header">

        </div>
        <div class="card-body">
            <div class="row g-4">

            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .payment-method-card {
            cursor: pointer;
            transition: all 0.3s ease;
            border: 2px solid transparent;
        }

        .payment-method-card:hover {
            border-color: var(--bs-primary);
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .badge.bg-success {
            background-color: #198754 !important;
        }

        .badge.bg-danger {
            background-color: #dc3545 !important;
        }

        .badge.bg-warning {
            background-color: #ffc107 !important;
            color: #000 !important;
        }

        .font-monospace {
            font-family: 'Courier New', monospace;
        }
    </style>
{% endblock %}
