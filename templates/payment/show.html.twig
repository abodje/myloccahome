{% extends 'base.html.twig' %}

{% block title %}Paiement #{{ payment.id }}{% endblock %}

{% block body %}
<div class="p-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h1 class="h2">
            <i class="bi bi-credit-card me-2"></i>
            Paiement #{{ payment.id }}
            {% if payment.status == 'paid' %}
                <span class="badge bg-success ms-2">Payé</span>
            {% elseif payment.isOverdue %}
                <span class="badge bg-danger ms-2">En retard</span>
            {% else %}
                <span class="badge bg-warning ms-2">En attente</span>
            {% endif %}
        </h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group me-2">
                {% if payment.status != 'paid' %}
                <button type="button" class="btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#markPaidModal">
                    <i class="bi bi-check-circle me-1"></i>Marquer payé
                </button>
                {% endif %}
                <a href="{{ path('app_payment_edit', {id: payment.id}) }}" class="btn btn-outline-warning">
                    <i class="bi bi-pencil me-1"></i>Modifier
                </a>
                <a href="{{ path('app_payment_index') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i>Retour
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Informations principales -->
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Détails du paiement</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-muted">Informations générales</h6>
                            
                            <div class="mb-3">
                                <div class="d-flex justify-content-between">
                                    <span>Montant :</span>
                                    <span class="fw-bold fs-4 text-success">{{ payment.amount|number_format(2, ',', ' ') }}€</span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="d-flex justify-content-between">
                                    <span>Type :</span>
                                    <span class="badge bg-light text-dark">{{ payment.type|title }}</span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="d-flex justify-content-between">
                                    <span>Date d'échéance :</span>
                                    <span class="fw-bold">{{ payment.dueDate|date('d/m/Y') }}</span>
                                </div>
                                {% if payment.isOverdue and payment.status != 'paid' %}
                                <small class="text-danger">
                                    <i class="bi bi-exclamation-triangle me-1"></i>
                                    En retard de {{ payment.daysOverdue }} jour(s)
                                </small>
                                {% endif %}
                            </div>

                            <div class="mb-3">
                                <div class="d-flex justify-content-between">
                                    <span>Statut :</span>
                                    {% if payment.status == 'paid' %}
                                        <span class="badge bg-success">Payé</span>
                                    {% elseif payment.isOverdue %}
                                        <span class="badge bg-danger">En retard</span>
                                    {% else %}
                                        <span class="badge bg-warning">En attente</span>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <h6 class="text-muted">Locataire</h6>
                            <div class="d-flex align-items-start mb-3">
                                <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                                    {{ payment.tenant.firstName|first|upper }}{{ payment.tenant.lastName|first|upper }}
                                </div>
                                <div>
                                    <a href="{{ path('app_tenant_show', {id: payment.tenant.id}) }}" class="text-decoration-none">
                                        <strong>{{ payment.tenant.fullName }}</strong>
                                    </a>
                                    <br>
                                    <small class="text-muted">{{ payment.tenant.email }}</small>
                                    {% if payment.tenant.phone %}
                                    <br>
                                    <small class="text-muted">{{ payment.tenant.phone }}</small>
                                    {% endif %}
                                </div>
                            </div>

                            <h6 class="text-muted">Propriété concernée</h6>
                            <div class="d-flex align-items-start">
                                <i class="bi bi-building me-2 mt-1 text-muted"></i>
                                <div>
                                    <a href="{{ path('app_property_show', {id: payment.rentalContract.property.id}) }}" class="text-decoration-none">
                                        <strong>{{ payment.rentalContract.property.title }}</strong>
                                    </a>
                                    <br>
                                    <small class="text-muted">{{ payment.rentalContract.property.fullAddress }}</small>
                                    <br>
                                    <a href="{{ path('app_rental_contract_show', {id: payment.rentalContract.id}) }}" class="text-decoration-none">
                                        <small class="text-primary">Voir le contrat #{{ payment.rentalContract.id }}</small>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    {% if payment.status == 'paid' %}
                    <hr>
                    <h6 class="text-muted">Détails du paiement</h6>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="d-flex justify-content-between">
                                <span>Date de paiement :</span>
                                <span class="fw-bold">{{ payment.paidDate|date('d/m/Y') }}</span>
                            </div>
                        </div>
                        {% if payment.paymentMethod %}
                        <div class="col-md-4">
                            <div class="d-flex justify-content-between">
                                <span>Mode de paiement :</span>
                                <span class="fw-bold">{{ payment.paymentMethod|title }}</span>
                            </div>
                        </div>
                        {% endif %}
                        {% if payment.reference %}
                        <div class="col-md-4">
                            <div class="d-flex justify-content-between">
                                <span>Référence :</span>
                                <span class="fw-bold">{{ payment.reference }}</span>
                            </div>
                        </div>
                        {% endif %}
                    </div>
                    {% endif %}

                    {% if payment.notes %}
                    <hr>
                    <h6 class="text-muted">Notes</h6>
                    <p class="mb-0">{{ payment.notes|nl2br }}</p>
                    {% endif %}
                </div>
            </div>

            <!-- Autres paiements du contrat -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Autres paiements du contrat</h5>
                </div>
                <div class="card-body">
                    {% set otherPayments = payment.rentalContract.payments|filter(p => p.id != payment.id) %}
                    {% if otherPayments|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Date d'échéance</th>
                                        <th>Montant</th>
                                        <th>Type</th>
                                        <th>Statut</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for otherPayment in otherPayments|slice(0, 10) %}
                                    <tr>
                                        <td>{{ otherPayment.dueDate|date('d/m/Y') }}</td>
                                        <td class="fw-bold">{{ otherPayment.amount|number_format(2, ',', ' ') }}€</td>
                                        <td><span class="badge bg-light text-dark">{{ otherPayment.type|title }}</span></td>
                                        <td>
                                            {% if otherPayment.status == 'paid' %}
                                                <span class="badge bg-success">Payé</span>
                                            {% elseif otherPayment.isOverdue %}
                                                <span class="badge bg-danger">En retard</span>
                                            {% else %}
                                                <span class="badge bg-warning">En attente</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <a href="{{ path('app_payment_show', {id: otherPayment.id}) }}" class="btn btn-sm btn-outline-primary">
                                                Voir
                                            </a>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        
                        {% if otherPayments|length > 10 %}
                        <div class="text-center mt-2">
                            <a href="{{ path('app_payment_index', {contract: payment.rentalContract.id}) }}" class="btn btn-sm btn-outline-primary">
                                Voir tous les paiements ({{ otherPayments|length + 1 }})
                            </a>
                        </div>
                        {% endif %}
                    {% else %}
                        <div class="text-center text-muted">
                            <i class="bi bi-credit-card mb-2"></i>
                            <p class="mb-0">Aucun autre paiement pour ce contrat</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Actions et informations complémentaires -->
        <div class="col-lg-4">
            <!-- Actions rapides -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="mb-0">Actions rapides</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        {% if payment.status != 'paid' %}
                        <button type="button" class="btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#markPaidModal">
                            <i class="bi bi-check-circle me-1"></i>Marquer comme payé
                        </button>
                        {% endif %}
                        <a href="mailto:{{ payment.tenant.email }}" class="btn btn-outline-primary">
                            <i class="bi bi-envelope me-1"></i>Contacter le locataire
                        </a>
                        <a href="{{ path('app_rental_contract_show', {id: payment.rentalContract.id}) }}" class="btn btn-outline-info">
                            <i class="bi bi-file-text me-1"></i>Voir le contrat
                        </a>
                        <a href="{{ path('app_payment_edit', {id: payment.id}) }}" class="btn btn-outline-warning">
                            <i class="bi bi-pencil me-1"></i>Modifier le paiement
                        </a>
                    </div>
                </div>
            </div>

            <!-- Informations système -->
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">Informations</h6>
                </div>
                <div class="card-body">
                    <small class="text-muted">
                        <div class="mb-1">Créé le : {{ payment.createdAt|date('d/m/Y à H:i') }}</div>
                        <div>Modifié le : {{ payment.updatedAt|date('d/m/Y à H:i') }}</div>
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal marquer comme payé -->
{% if payment.status != 'paid' %}
<div class="modal fade" id="markPaidModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Marquer comme payé</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="POST" action="{{ path('app_payment_mark_paid', {id: payment.id}) }}">
                <div class="modal-body">
                    <div class="alert alert-success">
                        <i class="bi bi-check-circle me-2"></i>
                        Marquer le paiement de <strong>{{ payment.amount|number_format(2, ',', ' ') }}€</strong> comme payé.
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="paid_date" class="form-label">Date de paiement</label>
                                <input type="date" class="form-control" id="paid_date" name="paid_date" value="{{ 'now'|date('Y-m-d') }}" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="payment_method" class="form-label">Mode de paiement</label>
                                <select class="form-select" id="payment_method" name="payment_method">
                                    <option value="">Choisir</option>
                                    <option value="virement">Virement</option>
                                    <option value="cheque">Chèque</option>
                                    <option value="especes">Espèces</option>
                                    <option value="prelevement">Prélèvement</option>
                                    <option value="carte">Carte bancaire</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="reference" class="form-label">Référence (optionnel)</label>
                        <input type="text" class="form-control" id="reference" name="reference" placeholder="Numéro de chèque, référence virement...">
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="hidden" name="_token" value="{{ csrf_token('mark_paid' ~ payment.id) }}">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-success">Marquer comme payé</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endif %}
{% endblock %}