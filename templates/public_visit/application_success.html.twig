{% extends 'base.html.twig' %}

{% block title %}Candidature envoyée{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        {% if app.user %}
            <div class="col-md-2 sidebar p-3">
                {% include '_partials/sidebar.html.twig' %}
            </div>
        {% endif %}

        <div class="col-md-{{ app.user ? '10' : '12' }} main-content p-4">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="card shadow-lg border-0 mt-5">
                            <div class="card-body text-center p-5">
                                <div class="mb-4">
                                    <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
                                </div>

                                <h2 class="mb-3">Candidature envoyée avec succès !</h2>

                                <p class="lead text-muted mb-4">
                                    Votre dossier de candidature a été soumis et évalué automatiquement.
                                </p>

                                {% if application.score %}
                                    <div class="card bg-light mb-4">
                                        <div class="card-body">
                                            <h5 class="card-title mb-3">Évaluation de votre candidature</h5>

                                            <div class="mb-3">
                                                <h2 class="display-4 mb-0">
                                                    {% if application.score >= 80 %}
                                                        <span class="text-success">{{ application.score }}/100</span>
                                                    {% elseif application.score >= 60 %}
                                                        <span class="text-warning">{{ application.score }}/100</span>
                                                    {% else %}
                                                        <span class="text-danger">{{ application.score }}/100</span>
                                                    {% endif %}
                                                </h2>
                                                <p class="text-muted mb-0">Score de candidature</p>
                                            </div>

                                            {% if application.scoreDetails %}
                                                <div class="text-start">
                                                    <small class="text-muted">Détails de l'évaluation :</small>
                                                    <ul class="list-unstyled mt-2">
                                                        {% for criterion, detail in application.scoreDetails.criteria %}
                                                            <li class="mb-1">
                                                                <i class="bi bi-check-circle-fill text-success"></i>
                                                                <strong>{{ criterion|title }} :</strong>
                                                                {{ detail.score }}/{{ detail.max_points }} points
                                                            </li>
                                                        {% endfor %}
                                                    </ul>
                                                </div>
                                            {% endif %}

                                            {% if application.scoreDetails.grade %}
                                                <div class="mt-3">
                                                    <span class="badge bg-primary fs-5 px-4 py-2">
                                                        Note : {{ application.scoreDetails.grade }}
                                                    </span>
                                                </div>
                                            {% endif %}
                                        </div>
                                    </div>
                                {% endif %}

                                <div class="card bg-primary text-white mb-4">
                                    <div class="card-body">
                                        <h6 class="card-title">
                                            <i class="bi bi-house-door"></i> Propriété concernée
                                        </h6>
                                        <p class="mb-0">{{ application.property.propertyType }}</p>
                                        <small>
                                            <i class="bi bi-geo-alt"></i> {{ application.property.fullAddress }}
                                        </small>
                                    </div>
                                </div>

                                <div class="alert alert-info">
                                    <i class="bi bi-info-circle"></i>
                                    <strong>Prochaines étapes :</strong>
                                    <ul class="text-start mb-0 mt-2">
                                        <li>Le propriétaire a été notifié de votre candidature</li>
                                        <li>Vous recevrez un email de confirmation avec votre score</li>
                                        <li>Le propriétaire examinera les candidatures et vous contactera si votre profil correspond</li>
                                        <li>Préparez vos documents justificatifs (pièce d'identité, bulletins de salaire, etc.)</li>
                                    </ul>
                                </div>

                                <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-4">
                                    <a href="{{ path('app_public_visits_index') }}"
                                       class="btn btn-primary btn-lg">
                                        <i class="bi bi-house-door"></i> Voir d'autres propriétés
                                    </a>
                                    <a href="{{ path('app_public_visits_property', {id: application.property.id}) }}"
                                       class="btn btn-outline-secondary btn-lg">
                                        <i class="bi bi-arrow-left"></i> Retour à la propriété
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
