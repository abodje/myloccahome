{% extends 'base.html.twig' %}

{% block title %}Tableau de bord - Gestion Locative{% endblock %}

{% block body %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Tableau de bord</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <button type="button" class="btn btn-sm btn-outline-secondary">
                <i class="fas fa-calendar me-1"></i>{{ "now"|date("d/m/Y") }}
            </button>
        </div>
    </div>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stats-card h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-uppercase mb-1">
                            Propriétés
                        </div>
                        <div class="h5 mb-0 font-weight-bold">{{ propertyStats.total }}</div>
                        <small>{{ propertyStats.occupied }} occupées / {{ propertyStats.available }} libres</small>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-building fa-2x text-white-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stats-card-success h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-uppercase mb-1">
                            Revenus mensuels
                        </div>
                        <div class="h5 mb-0 font-weight-bold">{{ leaseStats.monthly_revenue|number_format(2, ',', ' ') }} €</div>
                        <small>{{ leaseStats.active }} contrats actifs</small>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-euro-sign fa-2x text-white-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stats-card-warning h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-uppercase mb-1">
                            Paiements en retard
                        </div>
                        <div class="h5 mb-0 font-weight-bold">{{ paymentStats.overdue_count }}</div>
                        <small>{{ paymentStats.overdue_amount|number_format(2, ',', ' ') }} € en retard</small>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-exclamation-triangle fa-2x text-white-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stats-card-info h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-uppercase mb-1">
                            Dépenses ce mois
                        </div>
                        <div class="h5 mb-0 font-weight-bold">{{ expenseStats.this_month|number_format(2, ',', ' ') }} €</div>
                        <small>{{ expenseStats.total_count }} dépenses au total</small>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-receipt fa-2x text-white-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>Actions rapides</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 mb-2">
                        <a href="{{ path('app_property_new') }}" class="btn btn-primary btn-sm w-100">
                            <i class="fas fa-plus me-1"></i>Nouvelle propriété
                        </a>
                    </div>
                    <div class="col-md-3 mb-2">
                        <a href="{{ path('app_tenant_new') }}" class="btn btn-primary btn-sm w-100">
                            <i class="fas fa-user-plus me-1"></i>Nouveau locataire
                        </a>
                    </div>
                    <div class="col-md-3 mb-2">
                        <a href="{{ path('app_lease_new') }}" class="btn btn-primary btn-sm w-100">
                            <i class="fas fa-file-contract me-1"></i>Nouveau contrat
                        </a>
                    </div>
                    <div class="col-md-3 mb-2">
                        <a href="{{ path('app_expense_new') }}" class="btn btn-primary btn-sm w-100">
                            <i class="fas fa-receipt me-1"></i>Nouvelle dépense
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activities -->
<div class="row">
    <div class="col-lg-6 mb-4">
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-exclamation-circle me-2 text-warning"></i>Paiements en retard</h5>
                <a href="{{ path('app_payment_index', {status: 'overdue'}) }}" class="btn btn-sm btn-outline-primary">Voir tout</a>
            </div>
            <div class="card-body">
                {% if overduePayments|length > 0 %}
                    <div class="list-group list-group-flush">
                        {% for payment in overduePayments|slice(0, 5) %}
                        <div class="list-group-item px-0">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>{{ payment.lease.tenant.fullName }}</strong><br>
                                    <small class="text-muted">{{ payment.lease.property.fullAddress }}</small>
                                </div>
                                <div class="text-end">
                                    <span class="badge bg-danger">{{ payment.amount|number_format(2, ',', ' ') }} €</span><br>
                                    <small class="text-muted">{{ payment.dueDate|date('d/m/Y') }}</small>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <p class="text-muted text-center py-3">Aucun paiement en retard</p>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="col-lg-6 mb-4">
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-calendar-times me-2 text-info"></i>Contrats se terminant bientôt</h5>
                <a href="{{ path('app_lease_index', {status: 'ending_soon'}) }}" class="btn btn-sm btn-outline-primary">Voir tout</a>
            </div>
            <div class="card-body">
                {% if endingLeases|length > 0 %}
                    <div class="list-group list-group-flush">
                        {% for lease in endingLeases|slice(0, 5) %}
                        <div class="list-group-item px-0">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>{{ lease.tenant.fullName }}</strong><br>
                                    <small class="text-muted">{{ lease.property.fullAddress }}</small>
                                </div>
                                <div class="text-end">
                                    <span class="badge bg-warning text-dark">{{ lease.endDate|date('d/m/Y') }}</span><br>
                                    <small class="text-muted">{{ lease.monthlyRent|number_format(2, ',', ' ') }} €/mois</small>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <p class="text-muted text-center py-3">Aucun contrat se terminant prochainement</p>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<!-- Recent Expenses -->
{% if recentExpenses|length > 0 %}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-receipt me-2 text-success"></i>Dépenses récentes</h5>
                <a href="{{ path('app_expense_index') }}" class="btn btn-sm btn-outline-primary">Voir tout</a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Description</th>
                                <th>Propriété</th>
                                <th>Catégorie</th>
                                <th class="text-end">Montant</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for expense in recentExpenses %}
                            <tr>
                                <td>{{ expense.expenseDate|date('d/m/Y') }}</td>
                                <td>{{ expense.description }}</td>
                                <td>
                                    {% if expense.property %}
                                        {{ expense.property.fullAddress }}
                                    {% else %}
                                        <em class="text-muted">Générale</em>
                                    {% endif %}
                                </td>
                                <td><span class="badge bg-light text-dark">{{ expense.category }}</span></td>
                                <td class="text-end">{{ expense.amount|number_format(2, ',', ' ') }} €</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endif %}

{% endblock %}