{% extends 'base.html.twig' %}

{% block title %}Mon Abonnement - LOKAPRO{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3 mb-3">
                <i class="bi bi-credit-card"></i>
                Mon Abonnement
            </h1>
        </div>
    </div>

    <!-- Informations du plan actuel -->
    <div class="row mb-4">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-star"></i>
                        Plan Actuel : {{ plan ? plan.name : 'Aucun' }}
                    </h5>
                </div>
                <div class="card-body">
                    {% if subscription %}
                        <div class="row">
                            <div class="col-md-6">
                                <p class="mb-2">
                                    <strong>Statut :</strong>
                                    <span class="badge bg-{{ subscription.status == 'ACTIVE' ? 'success' : 'warning' }}">
                                        {{ subscription.status }}
                                    </span>
                                </p>
                                <p class="mb-2">
                                    <strong>Cycle de facturation :</strong>
                                    {{ subscription.billingCycle == 'MONTHLY' ? 'Mensuel' : 'Annuel' }}
                                </p>
                                <p class="mb-2">
                                    <strong>Prix :</strong>
                                    {{ (subscription.amount / 1000)|number_format(0) }}K {{ subscription.currency }}
                                </p>
                            </div>
                            <div class="col-md-6">
                                <p class="mb-2">
                                    <strong>Date de début :</strong>
                                    {{ subscription.startDate|date('d/m/Y') }}
                                </p>
                                <p class="mb-2">
                                    <strong>Date de fin :</strong>
                                    {{ subscription.endDate ? subscription.endDate|date('d/m/Y') : 'Non définie' }}
                                </p>
                                {% if organization.trialEndsAt %}
                                <p class="mb-2">
                                    <strong>Période d'essai jusqu'au :</strong>
                                    <span class="text-warning">
                                        <i class="bi bi-gift"></i>
                                        {{ organization.trialEndsAt|date('d/m/Y') }}
                                    </span>
                                </p>
                                {% endif %}
                            </div>
                        </div>

                        {% if plan.slug != 'enterprise' %}
                        <div class="mt-3">
                            <a href="{{ path('app_subscription_upgrade') }}" class="btn btn-warning">
                                <i class="bi bi-arrow-up-circle"></i>
                                Passer à un plan supérieur
                            </a>
                        </div>
                        {% endif %}
                    {% else %}
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i>
                            Aucun abonnement actif
                        </div>
                        <a href="{{ path('app_registration_plans') }}" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i>
                            Choisir un plan
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle"></i>
                        Utilisation
                    </h5>
                </div>
                <div class="card-body">
                    {% for resourceType, limit in limits %}
                        <div class="mb-3">
                            <div class="d-flex justify-content-between mb-1">
                                <small>
                                    <i class="bi bi-{{ resourceType == 'properties' ? 'building' : (resourceType == 'tenants' ? 'people' : (resourceType == 'users' ? 'person-badge' : 'file-earmark')) }}"></i>
                                    {{ resourceType|title }}
                                </small>
                                <small>
                                    <strong>{{ limit.current }}</strong> / {{ limit.max ?? '∞' }}
                                </small>
                            </div>
                            {% if not limit.is_unlimited %}
                            <div class="progress" style="height: 10px;">
                                <div class="progress-bar bg-{{ limit.percentage > 80 ? 'danger' : (limit.percentage > 50 ? 'warning' : 'success') }}"
                                     role="progressbar"
                                     style="width: {{ limit.percentage }}%">
                                </div>
                            </div>
                            {% else %}
                            <div class="progress" style="height: 10px;">
                                <div class="progress-bar bg-success" role="progressbar" style="width: 100%">
                                    Illimité
                                </div>
                            </div>
                            {% endif %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    <!-- Fonctionnalités disponibles -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-check-circle"></i>
                        Fonctionnalités Disponibles
                    </h5>
                </div>
                <div class="card-body">
                    {% if features is empty %}
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            Aucune fonctionnalité disponible. Veuillez mettre à niveau votre plan.
                        </div>
                    {% else %}
                        <div class="row">
                            {% for featureKey, featureLabel in features %}
                            <div class="col-md-4 col-lg-3 mb-3">
                                <div class="d-flex align-items-center">
                                    <i class="bi {{ feature_icon(featureKey) }} text-success me-2 fs-4"></i>
                                    <span>{{ featureLabel }}</span>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

