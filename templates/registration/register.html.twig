<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inscription - Plan {{ plan.name }} - LOKAPRO</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 50px 0;
        }
        .registration-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
        }
        .plan-summary {
            background: linear-gradient(135deg, #5a8db3, #4a7ba7);
            color: white;
            padding: 30px;
            border-radius: 15px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="registration-card p-5">
                    <!-- En-tête -->
                    <div class="text-center mb-5">
                        <h2 class="mb-2">
                            <i class="bi bi-building"></i> Créer votre compte LOKAPRO
                        </h2>
                        <p class="text-muted">Plan sélectionné : <strong>{{ plan.name }}</strong></p>
                    </div>

                    <!-- Messages Flash -->
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle me-2"></i>
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    {% endfor %}

                    <div class="row">
                        <!-- Formulaire -->
                        <div class="col-md-7">
                            <form method="POST">
                                <h5 class="mb-4">
                                    <i class="bi bi-briefcase me-2"></i>
                                    Informations de votre entreprise
                                </h5>

                                <div class="mb-3">
                                    <label class="form-label">Nom de l'entreprise *</label>
                                    <input type="text" name="organization_name" class="form-control" required
                                           placeholder="Mon Agence Immobilière">
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Email professionnel *</label>
                                        <input type="email" name="organization_email" class="form-control" required
                                               placeholder="contact@monagence.com">
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Téléphone</label>
                                        <input type="tel" name="organization_phone" class="form-control"
                                               placeholder="0700000000">
                                    </div>
                                </div>

                                <hr class="my-4">

                                <h5 class="mb-4">
                                    <i class="bi bi-person me-2"></i>
                                    Votre compte administrateur
                                </h5>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Prénom *</label>
                                        <input type="text" name="first_name" class="form-control" required>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Nom *</label>
                                        <input type="text" name="last_name" class="form-control" required>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Email *</label>
                                    <input type="email" name="email" class="form-control" required>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Mot de passe *</label>
                                    <input type="password" name="password" class="form-control" required minlength="8">
                                    <small class="text-muted">Minimum 8 caractères</small>
                                </div>

                                <hr class="my-4">

                                <h5 class="mb-4">
                                    <i class="bi bi-credit-card me-2"></i>
                                    Cycle de facturation
                                </h5>

                                <div class="mb-4">
                                    {% if plan.slug == 'freemium' %}
                                        <div class="alert alert-success text-center">
                                            <h5 class="mb-2">
                                                <i class="bi bi-gift"></i> Plan GRATUIT
                                            </h5>
                                            <p class="mb-0">Aucun paiement requis, aucune carte bancaire nécessaire</p>
                                        </div>
                                        <input type="hidden" name="billing_cycle" value="MONTHLY">
                                    {% else %}
                                        <div class="form-check mb-2">
                                            <input class="form-check-input" type="radio" name="billing_cycle"
                                                   value="MONTHLY" id="monthly" checked>
                                            <label class="form-check-label" for="monthly">
                                                <strong>Mensuel</strong> - {{ (plan.monthlyPrice / 1000)|number_format(0) }}K FCFA/mois
                                            </label>
                                        </div>
                                        {% if plan.yearlyPrice and plan.yearlyDiscount > 0 %}
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="billing_cycle"
                                                   value="YEARLY" id="yearly">
                                            <label class="form-check-label" for="yearly">
                                                <strong>Annuel</strong> - {{ (plan.yearlyPrice / 1000)|number_format(0) }}K FCFA/an
                                                <span class="badge bg-success ms-2">
                                                    -{{ plan.yearlyDiscount|number_format(0) }}%
                                                </span>
                                            </label>
                                        </div>
                                        {% endif %}
                                    {% endif %}
                                </div>

                                <div class="form-check mb-4">
                                    <input class="form-check-input" type="checkbox" id="terms" required>
                                    <label class="form-check-label" for="terms">
                                        J'accepte les <a href="#">conditions d'utilisation</a> et la
                                        <a href="#">politique de confidentialité</a>
                                    </label>
                                </div>

                                <button type="submit" class="btn btn-primary btn-lg w-100">
                                    <i class="bi bi-rocket-takeoff me-2"></i>
                                    Démarrer mon essai gratuit de 30 jours
                                </button>

                                <p class="text-center text-muted mt-3">
                                    <small>
                                        <i class="bi bi-shield-check"></i>
                                        Aucun paiement requis pendant l'essai
                                    </small>
                                </p>
                            </form>
                        </div>

                        <!-- Résumé du plan -->
                        <div class="col-md-5">
                            <div class="plan-summary">
                                <h5 class="mb-4">
                                    <i class="bi bi-clipboard-check"></i>
                                    Récapitulatif - {{ plan.name }}
                                </h5>

                                <div class="mb-4">
                                    {% if plan.slug == 'freemium' %}
                                        <div class="text-center p-3 bg-light bg-opacity-10 rounded">
                                            <h3 class="text-warning mb-2">
                                                <i class="bi bi-infinity"></i> GRATUIT
                                            </h3>
                                            <p class="mb-0">Pour toujours</p>
                                        </div>
                                    {% else %}
                                        <div class="d-flex justify-content-between mb-2">
                                            <span>Prix mensuel :</span>
                                            <strong>{{ (plan.monthlyPrice / 1000)|number_format(0) }}K FCFA</strong>
                                        </div>
                                        {% if plan.yearlyPrice and plan.yearlyDiscount > 0 %}
                                        <div class="d-flex justify-content-between mb-2">
                                            <span>Prix annuel :</span>
                                            <strong>{{ (plan.yearlyPrice / 1000)|number_format(0) }}K FCFA</strong>
                                        </div>
                                        {% endif %}
                                        <div class="d-flex justify-content-between">
                                            <span>Période d'essai :</span>
                                            <strong class="text-warning">{{ plan.trialDays }} jours GRATUITS</strong>
                                        </div>
                                    {% endif %}
                                </div>

                                <hr style="border-color: rgba(255,255,255,0.3);">

                                <div class="mb-3">
                                    <h6>✨ Ce qui est inclus :</h6>
                                    <ul class="list-unstyled">
                                        {% for feature in plan.features %}
                                        <li class="mb-2">
                                            <i class="bi {{ feature_icon(feature) }} text-success"></i>
                                            {{ feature_label(feature) }}
                                        </li>
                                        {% endfor %}
                                    </ul>
                                </div>

                                <div class="alert alert-light">
                                    <i class="bi bi-info-circle"></i>
                                    <strong>Garantie satisfait ou remboursé</strong><br>
                                    <small>Annulez à tout moment, remboursement sous 30 jours</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Retour -->
                    <div class="text-center mt-4">
                        <a href="{{ path('app_registration_plans') }}" class="text-muted">
                            <i class="bi bi-arrow-left"></i>
                            Retour aux plans
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

