{% extends 'base.html.twig' %}

{% block title %}{{ type }} - Mes documents - LOKAPRO{% endblock %}

{% block page_title %}
    <h5 class="mb-0">
        <i class="bi bi-file-earmark-text me-2"></i>
        {{ type }}
    </h5>
{% endblock %}

{% block page_actions %}
    <div class="d-flex gap-2">
        <a href="{{ path('app_document_index') }}" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left"></i> Retour
        </a>
        <a href="{{ path('app_document_new') }}" class="btn btn-primary btn-sm">
            <i class="bi bi-plus-circle me-2"></i>
            Ajouter un document
        </a>
    </div>
{% endblock %}

{% block body %}
    {% if documents|length > 0 %}
        <div class="row">
            {% for document in documents %}
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 document-card">
                        <div class="card-body">
                            <div class="d-flex align-items-start mb-3">
                                <div class="me-3">
                                    {% if document.isPdf %}
                                        <i class="bi bi-file-earmark-pdf text-danger fs-2"></i>
                                    {% elseif document.isImage %}
                                        <i class="bi bi-file-earmark-image text-primary fs-2"></i>
                                    {% else %}
                                        <i class="bi bi-file-earmark text-secondary fs-2"></i>
                                    {% endif %}
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="card-title">{{ document.name }}</h6>
                                    <p class="card-text text-muted small">
                                        {{ document.originalFileName }}
                                    </p>
                                </div>
                            </div>

                            {% if document.description %}
                                <p class="card-text">{{ document.description|slice(0, 100) }}{% if document.description|length > 100 %}...{% endif %}</p>
                            {% endif %}

                            <div class="document-meta mb-3">
                                {% if document.documentDate %}
                                    <small class="text-muted d-block">
                                        <i class="bi bi-calendar me-1"></i>
                                        Date : {{ document.documentDate|date('d/m/Y') }}
                                    </small>
                                {% endif %}

                                {% if document.expirationDate %}
                                    <small class="d-block {{ document.isExpired ? 'text-danger' : (document.isExpiringSoon ? 'text-warning' : 'text-muted') }}">
                                        <i class="bi bi-clock me-1"></i>
                                        Expire le : {{ document.expirationDate|date('d/m/Y') }}
                                        {% if document.isExpired %}
                                            <span class="badge bg-danger ms-1">Expiré</span>
                                        {% elseif document.isExpiringSoon %}
                                            <span class="badge bg-warning ms-1">Bientôt</span>
                                        {% endif %}
                                    </small>
                                {% endif %}

                                <small class="text-muted d-block">
                                    <i class="bi bi-upload me-1"></i>
                                    Ajouté le : {{ document.createdAt|date('d/m/Y H:i') }}
                                </small>

                                {% if document.fileSize %}
                                    <small class="text-muted d-block">
                                        <i class="bi bi-hdd me-1"></i>
                                        Taille : {{ document.fileSizeFormatted }}
                                    </small>
                                {% endif %}
                            </div>

                            <div class="d-flex gap-2">
                                <a href="{{ path('app_secure_document_download', {id: document.id}) }}"
                                   class="btn btn-primary btn-sm flex-fill">
                                    <i class="bi bi-download me-1"></i>
                                    Télécharger
                                </a>
                                <a href="{{ path('app_document_show', {id: document.id}) }}"
                                   class="btn btn-outline-secondary btn-sm">
                                    <i class="bi bi-eye"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="text-center p-5">
            <i class="bi bi-file-earmark display-1 text-muted"></i>
            <h5 class="mt-3 text-muted">Aucun document de type "{{ type }}"</h5>
            <p class="text-muted">Commencez par ajouter votre premier document.</p>
            <a href="{{ path('app_document_new') }}" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>
                Ajouter un document
            </a>
        </div>
    {% endif %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .document-card {
            transition: all 0.3s ease;
        }

        .document-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .document-meta small {
            margin-bottom: 0.25rem;
        }
    </style>
{% endblock %}
