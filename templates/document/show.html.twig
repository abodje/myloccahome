{% extends 'base.html.twig' %}

{% block title %}{{ document.name }} - LOKAPRO{% endblock %}

{% block page_title %}
    <h5 class="mb-0">
        <i class="bi bi-file-earmark-text me-2"></i>
        {{ document.name }}
    </h5>
{% endblock %}

{% block page_actions %}
    <div class="d-flex gap-2">
        <a href="{{ path('app_document_index') }}" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left"></i> Retour
        </a>
        <a href="{{ path('app_document_download', {id: document.id}) }}" class="btn btn-success btn-sm">
            <i class="bi bi-download"></i> Télécharger
        </a>
        <a href="{{ path('app_document_edit', {id: document.id}) }}" class="btn btn-primary btn-sm">
            <i class="bi bi-pencil"></i> Modifier
        </a>
    </div>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-8">
            <!-- Informations du document -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>
                        Informations du document
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <td class="text-muted">Type :</td>
                                    <td><strong>{{ document.type }}</strong></td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Nom du fichier :</td>
                                    <td>{{ document.originalFileName }}</td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Taille :</td>
                                    <td>{{ document.fileSizeFormatted }}</td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Format :</td>
                                    <td>
                                        {% if document.isPdf %}
                                            <span class="badge bg-danger">PDF</span>
                                        {% elseif document.isImage %}
                                            <span class="badge bg-primary">Image</span>
                                        {% else %}
                                            <span class="badge bg-secondary">{{ document.fileExtension|upper }}</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                {% if document.documentDate %}
                                    <tr>
                                        <td class="text-muted">Date du document :</td>
                                        <td>{{ document.documentDate|date('d/m/Y') }}</td>
                                    </tr>
                                {% endif %}
                                {% if document.expirationDate %}
                                    <tr>
                                        <td class="text-muted">Date d'expiration :</td>
                                        <td class="{{ document.isExpired ? 'text-danger' : (document.isExpiringSoon ? 'text-warning' : '') }}">
                                            {{ document.expirationDate|date('d/m/Y') }}
                                            {% if document.isExpired %}
                                                <span class="badge bg-danger ms-1">Expiré</span>
                                            {% elseif document.isExpiringSoon %}
                                                <span class="badge bg-warning ms-1">Expire bientôt</span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endif %}
                                <tr>
                                    <td class="text-muted">Ajouté le :</td>
                                    <td>{{ document.createdAt|date('d/m/Y H:i') }}</td>
                                </tr>
                                {% if document.updatedAt %}
                                    <tr>
                                        <td class="text-muted">Modifié le :</td>
                                        <td>{{ document.updatedAt|date('d/m/Y H:i') }}</td>
                                    </tr>
                                {% endif %}
                            </table>
                        </div>
                    </div>

                    {% if document.description %}
                        <div class="mt-3">
                            <h6>Description :</h6>
                            <p class="text-muted">{{ document.description }}</p>
                        </div>
                    {% endif %}
                </div>
            </div>

            <!-- Associations -->
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-link me-2"></i>
                        Associations
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        {% if document.property %}
                            <div class="col-md-6 mb-3">
                                <h6>Propriété</h6>
                                <p class="mb-1">
                                    <a href="{{ path('app_property_show', {id: document.property.id}) }}" class="text-decoration-none">
                                        <strong>{{ document.property.fullAddress }}</strong>
                                    </a>
                                </p>
                                <small class="text-muted">
                                    {{ document.property.propertyType }} - {{ document.property.rooms }} pièces
                                </small>
                            </div>
                        {% endif %}

                        {% if document.tenant %}
                            <div class="col-md-6 mb-3">
                                <h6>Locataire</h6>
                                <p class="mb-1"><strong>{{ document.tenant.fullName }}</strong></p>
                                <small class="text-muted">{{ document.tenant.email }}</small>
                            </div>
                        {% endif %}

                        {% if document.lease %}
                            <div class="col-md-6 mb-3">
                                <h6>Contrat de location</h6>
                                <p class="mb-1">
                                    <strong>Contrat #{{ document.lease.id }}</strong>
                                </p>
                                <small class="text-muted">
                                    Du {{ document.lease.startDate|date('d/m/Y') }}
                                    {% if document.lease.endDate %}
                                        au {{ document.lease.endDate|date('d/m/Y') }}
                                    {% endif %}
                                </small>
                            </div>
                        {% endif %}

                        {% if document.owner %}
                            <div class="col-md-6 mb-3">
                                <h6>Propriétaire</h6>
                                <p class="mb-1"><strong>{{ document.owner.fullName }}</strong></p>
                                <small class="text-muted">{{ document.owner.ownerType }}</small>
                            </div>
                        {% endif %}

                        {% if not document.property and not document.tenant and not document.lease and not document.owner %}
                            <div class="col-12">
                                <p class="text-muted text-center">Ce document n'est associé à aucun élément spécifique.</p>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Aperçu du document -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-eye me-2"></i>
                        Aperçu
                    </h6>
                </div>
                <div class="card-body text-center">
                    <div class="document-preview mb-3">
                        {% if document.isPdf %}
                            <i class="bi bi-file-earmark-pdf display-1 text-danger"></i>
                            <p class="text-muted mt-2">Document PDF</p>
                        {% elseif document.isImage %}
                            <i class="bi bi-file-earmark-image display-1 text-primary"></i>
                            <p class="text-muted mt-2">Image</p>
                        {% else %}
                            <i class="bi bi-file-earmark display-1 text-secondary"></i>
                            <p class="text-muted mt-2">Document</p>
                        {% endif %}
                    </div>

                    <div class="d-grid gap-2">
                        <a href="{{ path('app_document_download', {id: document.id}) }}"
                           class="btn btn-success">
                            <i class="bi bi-download me-2"></i>
                            Télécharger
                        </a>

                        {% if document.isPdf %}
                            <button class="btn btn-outline-primary" onclick="openPdfViewer()">
                                <i class="bi bi-eye me-2"></i>
                                Visualiser
                            </button>
                        {% endif %}
                    </div>
                </div>
            </div>

            <!-- Actions -->
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-gear me-2"></i>
                        Actions
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="{{ path('app_document_edit', {id: document.id}) }}"
                           class="btn btn-outline-primary">
                            <i class="bi bi-pencil me-2"></i>
                            Modifier
                        </a>

                        <button class="btn btn-outline-info" onclick="shareDocument()">
                            <i class="bi bi-share me-2"></i>
                            Partager
                        </button>

                        {% if not document.isArchived %}
                            <button class="btn btn-outline-warning" onclick="archiveDocument()">
                                <i class="bi bi-archive me-2"></i>
                                Archiver
                            </button>
                        {% else %}
                            <button class="btn btn-outline-success" onclick="unarchiveDocument()">
                                <i class="bi bi-archive me-2"></i>
                                Désarchiver
                            </button>
                        {% endif %}

                        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                            <i class="bi bi-trash me-2"></i>
                            Supprimer
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <!-- Modal suppression -->
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirmer la suppression</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Êtes-vous sûr de vouloir supprimer ce document ?</p>
                    <p class="text-muted">Cette action est irréversible et supprimera également le fichier.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <form action="{{ path('app_document_delete', {id: document.id}) }}" method="POST" class="d-inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ document.id) }}">
                        <button type="submit" class="btn btn-danger">Supprimer</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        function openPdfViewer() {
            window.open('{{ path("app_document_download", {id: document.id}) }}', '_blank');
        }

        function shareDocument() {
            if (navigator.share) {
                navigator.share({
                    title: '{{ document.name }}',
                    text: '{{ document.description ?? "Document partagé depuis LOKAPRO" }}',
                    url: window.location.href
                });
            } else {
                // Fallback: copier le lien
                navigator.clipboard.writeText(window.location.href).then(() => {
                    alert('Lien copié dans le presse-papiers');
                });
            }
        }

        function archiveDocument() {
            // Ici vous pourriez implémenter l'archivage via AJAX
            alert('Fonctionnalité d\'archivage à implémenter');
        }

        function unarchiveDocument() {
            // Ici vous pourriez implémenter le désarchivage via AJAX
            alert('Fonctionnalité de désarchivage à implémenter');
        }
    </script>
{% endblock %}
