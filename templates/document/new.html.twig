{% extends 'base.html.twig' %}

{% block title %}Ajouter un document - MYLOCCA{% endblock %}

{% block page_title %}
    <h5 class="mb-0">
        <i class="bi bi-file-earmark-plus me-2"></i>
        Ajouter un document
    </h5>
{% endblock %}

{% block page_actions %}
    <a href="{{ path('app_document_index') }}" class="btn btn-outline-secondary btn-sm">
        <i class="bi bi-arrow-left"></i> Retour
    </a>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">Informations du document</h6>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}

                    <div class="mb-3">
                        {{ form_label(form.name, 'Nom du document') }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.name) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.type, 'Type') }}
                        {{ form_widget(form.type, {'attr': {'class': 'form-select'}}) }}
                        {{ form_errors(form.type) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.file, 'Fichier') }}
                        {{ form_widget(form.file, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.file) }}
                        <div class="form-text">
                            Formats accept√©s : PDF, DOC, DOCX, JPG, PNG (Max 10MB)
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.description, 'Description') }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 3}}) }}
                        {{ form_errors(form.description) }}
                    </div>

                    {% if form.lease is defined %}
                    <div class="mb-3">
                        {{ form_label(form.lease, 'Bail associ√© (optionnel)') }}
                        {{ form_widget(form.lease, {'attr': {'class': 'form-select'}}) }}
                        {{ form_errors(form.lease) }}
                    </div>
                    {% endif %}

                    {% if form.tenant is defined %}
                    <div class="mb-3">
                        {{ form_label(form.tenant, 'Locataire associ√© (optionnel)') }}
                        {{ form_widget(form.tenant, {'attr': {'class': 'form-select'}}) }}
                        {{ form_errors(form.tenant) }}
