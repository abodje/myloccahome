                    {% endif %}

                    {% if form.property is defined %}
                    <div class="mb-3">
                        {{ form_label(form.property, 'Propri√©t√© associ√©e (optionnel)') }}
                        {{ form_widget(form.property, {'attr': {'class': 'form-select'}}) }}
                        {{ form_errors(form.property) }}
