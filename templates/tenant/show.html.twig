{% extends 'base.html.twig' %}

{% block title %}{{ tenant.fullName }} - MYLOCCA{% endblock %}

{% block page_title %}
    <h5 class="mb-0">
        <i class="bi bi-person me-2"></i>
        {{ tenant.fullName }}
    </h5>
{% endblock %}

{% block page_actions %}
    <div class="d-flex gap-2">
        <a href="{{ path('app_tenant_index') }}" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left"></i> Retour
        </a>
        {% if not tenant.user %}
        <form method="POST" action="{{ path('app_tenant_create_account', {id: tenant.id}) }}" class="d-inline">
            <button type="submit" class="btn btn-success btn-sm"
                    onclick="return confirm('Créer un compte utilisateur pour ce locataire ?')">
                <i class="bi bi-key"></i> Créer un accès
            </button>
        </form>
        {% endif %}
        <a href="{{ path('app_tenant_edit', {id: tenant.id}) }}" class="btn btn-primary btn-sm">
            <i class="bi bi-pencil"></i> Modifier
        </a>
    </div>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-8">
            <!-- Informations personnelles -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-person-badge me-2"></i>
                        Informations personnelles
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <td class="text-muted">Nom complet :</td>
                                    <td><strong>{{ tenant.fullName }}</strong></td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Email :</td>
                                    <td>
                                        <a href="mailto:{{ tenant.email }}">{{ tenant.email }}</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Téléphone :</td>
                                    <td>
                                        {% if tenant.phone %}
                                            <a href="tel:{{ tenant.phone }}">{{ tenant.phone }}</a>
                                        {% else %}
                                            <span class="text-muted">Non renseigné</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Date de naissance :</td>
                                    <td>{{ tenant.birthDate ? tenant.birthDate|date('d/m/Y') : 'Non renseignée' }}</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <td class="text-muted">Profession :</td>
                                    <td>{{ tenant.profession ?? 'Non renseignée' }}</td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Revenus mensuels :</td>
                                    <td>
                                        {% if tenant.monthlyIncome %}
                                            <strong class="text-success">{{ tenant.monthlyIncome|currency }}</strong>
                                        {% else %}
                                            <span class="text-muted">Non renseignés</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Adresse :</td>
                                    <td>{{ tenant.fullAddress ?? 'Non renseignée' }}</td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Inscrit le :</td>
                                    <td>{{ tenant.createdAt|date('d/m/Y') }}</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    {% if tenant.emergencyContactName %}
                        <hr>
                        <div class="row">
                            <div class="col-12">
                                <h6>Contact d'urgence</h6>
                                <p class="mb-1"><strong>{{ tenant.emergencyContactName }}</strong></p>
                                {% if tenant.emergencyContactPhone %}
                                    <p class="text-muted">
                                        <i class="bi bi-phone me-1"></i>{{ tenant.emergencyContactPhone }}
                                    </p>
                                {% endif %}
                            </div>
                        </div>
                    {% endif %}

                    {% if tenant.notes %}
                        <hr>
                        <div class="row">
                            <div class="col-12">
                                <h6>Notes :</h6>
                                <p class="text-muted">{{ tenant.notes }}</p>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>

            <!-- Contrat actuel -->
            {% if current_lease %}
                <div class="card mb-4">
                    <div class="card-header bg-success text-white">
                        <h6 class="mb-0">
                            <i class="bi bi-file-text me-2"></i>
                            Contrat de location actuel
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h6>Propriété</h6>
                                <p class="mb-1">
                                    <a href="{{ path('app_property_show', {id: current_lease.property.id}) }}" class="text-decoration-none">
                                        <strong>{{ current_lease.property.fullAddress }}</strong>
                                    </a>
                                </p>
                                <p class="text-muted small">
                                    {{ current_lease.property.propertyType }} -
                                    {{ current_lease.property.rooms }} pièces -
                                    {{ current_lease.property.surface }} m²
                                </p>
                            </div>
                            <div class="col-md-6">
                                <h6>Conditions</h6>
                                <p class="mb-1">
                                    Du {{ current_lease.startDate|date('d/m/Y') }}
                                    {% if current_lease.endDate %}
                                        au {{ current_lease.endDate|date('d/m/Y') }}
                                    {% else %}
                                        (durée indéterminée)
                                    {% endif %}
                                </p>
                                <p class="text-muted small">
                                    Loyer : {{ current_lease.monthlyRent|currency }}/mois
                                    {% if current_lease.charges %}
                                        + {{ current_lease.charges|currency }} de charges
                                    {% endif %}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}

            <!-- Historique des paiements récents -->
            {% if recent_payments|length > 0 %}
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h6 class="mb-0">
                                <i class="bi bi-credit-card me-2"></i>
                                Paiements récents
                            </h6>
                            <a href="{{ path('app_tenant_payments', {id: tenant.id}) }}" class="btn btn-outline-primary btn-sm">
                                Voir tout l'historique
                            </a>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        {% for payment in recent_payments|slice(0, 5) %}
                            <div class="d-flex justify-content-between align-items-center p-3 border-bottom">
                                <div>
                                    <h6 class="mb-1">{{ payment.type }} - {{ payment.amount|currency }}</h6>
                                    <small class="text-muted">
                                        Échéance : {{ payment.dueDate|date('d/m/Y') }}
                                        {% if payment.paidDate %}
                                            - Payé le {{ payment.paidDate|date('d/m/Y') }}
                                        {% endif %}
                                    </small>
                                </div>
                                <span class="badge bg-{{ payment.status == 'Payé' ? 'success' : (payment.isOverdue ? 'danger' : 'warning') }}">
                                    {{ payment.status }}
                                </span>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
        </div>

        <div class="col-lg-4">
            <!-- Compte utilisateur -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-person-lock me-2"></i>
                        Accès à l'application
                    </h6>
                </div>
                <div class="card-body">
                    {% if tenant.user %}
                        <div class="alert alert-success mb-0">
                            <i class="bi bi-check-circle me-2"></i>
                            <strong>Compte actif</strong>
                            <br><small>Email: {{ tenant.user.email }}</small>
                            <br><small>Dernière connexion:
                                {% if tenant.user.lastLoginAt %}
                                    {{ tenant.user.lastLoginAt|date('d/m/Y H:i') }}
                                {% else %}
                                    Jamais connecté
                                {% endif %}
                            </small>
                        </div>
                    {% else %}
                        <div class="alert alert-warning mb-3">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            Aucun compte utilisateur
                        </div>
                        <form method="POST" action="{{ path('app_tenant_create_account', {id: tenant.id}) }}">
                            <button type="submit" class="btn btn-success w-100"
                                    onclick="return confirm('Créer un compte pour ce locataire ?')">
                                <i class="bi bi-key me-2"></i>
                                Créer un accès
                            </button>
                        </form>
                        <small class="text-muted d-block mt-2">
                            Un mot de passe sera généré automatiquement
                        </small>
                    {% endif %}
                </div>
            </div>

            <!-- Actions rapides -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-lightning me-2"></i>
                        Actions rapides
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        {% if not current_lease %}
                            <a href="{{ path('app_lease_new') }}?tenant={{ tenant.id }}" class="btn btn-success">
                                <i class="bi bi-file-plus me-2"></i>
                                Créer un contrat
                            </a>
                        {% endif %}

                        <a href="{{ path('app_payment_new') }}?tenant={{ tenant.id }}" class="btn btn-primary">
                            <i class="bi bi-credit-card-2-front me-2"></i>
                            Nouveau paiement
                        </a>

                        <a href="{{ path('app_maintenance_request_new') }}?tenant={{ tenant.id }}" class="btn btn-warning">
                            <i class="bi bi-tools me-2"></i>
                            Demande de maintenance
                        </a>

                        <a href="{{ path('app_tenant_documents', {id: tenant.id}) }}" class="btn btn-outline-info">
                            <i class="bi bi-file-earmark me-2"></i>
                            Documents
                        </a>

                        <a href="mailto:{{ tenant.email }}" class="btn btn-outline-secondary">
                            <i class="bi bi-envelope me-2"></i>
                            Envoyer un email
                        </a>
                    </div>
                </div>
            </div>

            <!-- Statistiques du locataire -->
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-graph-up me-2"></i>
                        Statistiques
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <h4 class="text-primary">{{ tenant.leases|length }}</h4>
                            <small class="text-muted">Contrats</small>
                        </div>
                        <div class="col-6">
                            <h4 class="text-success">{{ recent_payments|length }}</h4>
                            <small class="text-muted">Paiements</small>
                        </div>
                    </div>
                    {% if current_lease %}
                        <hr>
                        <div class="text-center">
                            <h5 class="text-info">{{ current_lease.totalMonthlyAmount|currency }}</h5>
                            <small class="text-muted">Montant mensuel total</small>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
