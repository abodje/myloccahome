{% extends 'base.html.twig' %}

{% block title %}Modifier {{ tenant.fullName }} - LOKAPRO{% endblock %}

{% block page_title %}
    <h5 class="mb-0">
        <i class="bi bi-pencil me-2"></i>
        Modifier {{ tenant.fullName }}
    </h5>
{% endblock %}

{% block page_actions %}
    <div class="d-flex gap-2">
        <a href="{{ path('app_tenant_show', {id: tenant.id}) }}" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left"></i> Retour
        </a>
        <a href="{{ path('app_tenant_index') }}" class="btn btn-outline-info btn-sm">
            <i class="bi bi-list"></i> Liste des locataires
        </a>
    </div>
{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-person-badge me-2"></i>
                        Informations du locataire
                    </h6>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <!-- Informations personnelles -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.firstName) }}
                                    {{ form_widget(form.firstName) }}
                                    {{ form_errors(form.firstName) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.lastName) }}
                                    {{ form_widget(form.lastName) }}
                                    {{ form_errors(form.lastName) }}
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.email) }}
                                    {{ form_widget(form.email) }}
                                    {{ form_errors(form.email) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.phone) }}
                                    {{ form_widget(form.phone) }}
                                    {{ form_errors(form.phone) }}
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.birthDate) }}
                                    {{ form_widget(form.birthDate) }}
                                    {{ form_errors(form.birthDate) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.profession) }}
                                    {{ form_widget(form.profession) }}
                                    {{ form_errors(form.profession) }}
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.monthlyIncome) }}
                            {{ form_widget(form.monthlyIncome) }}
                            {{ form_errors(form.monthlyIncome) }}
                            <div class="form-text">Revenus mensuels nets du locataire</div>
                        </div>

                        <!-- Adresse -->
                        <h6 class="mt-4 mb-3">Adresse</h6>
                        <div class="row">
                            <div class="col-md-8">
                                <div class="mb-3">
                                    {{ form_label(form.address) }}
                                    {{ form_widget(form.address) }}
                                    {{ form_errors(form.address) }}
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    {{ form_label(form.postalCode) }}
                                    {{ form_widget(form.postalCode) }}
                                    {{ form_errors(form.postalCode) }}
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.city) }}
                            {{ form_widget(form.city) }}
                            {{ form_errors(form.city) }}
                        </div>

                        <!-- Contact d'urgence -->
                        <h6 class="mt-4 mb-3">Contact d'urgence</h6>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.emergencyContactName) }}
                                    {{ form_widget(form.emergencyContactName) }}
                                    {{ form_errors(form.emergencyContactName) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.emergencyContactPhone) }}
                                    {{ form_widget(form.emergencyContactPhone) }}
                                    {{ form_errors(form.emergencyContactPhone) }}
                                </div>
                            </div>
                        </div>

                        <!-- Notes -->
                        <div class="mb-3">
                            {{ form_label(form.notes) }}
                            {{ form_widget(form.notes) }}
                            {{ form_errors(form.notes) }}
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a href="{{ path('app_tenant_show', {id: tenant.id}) }}" class="btn btn-secondary">Annuler</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-2"></i>
                                Enregistrer les modifications
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
