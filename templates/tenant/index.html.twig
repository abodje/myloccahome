{% extends 'base.html.twig' %}

{% block title %}Locataires - Gestion Immobilière{% endblock %}

{% block header %}
<div class="page-header">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col">
                <h1 class="h2 mb-0">
                    <i class="bi bi-people text-primary"></i>
                    Gestion des locataires
                </h1>
                <p class="text-muted mb-0">{{ tenants|length }} locataire(s) enregistré(s)</p>
            </div>
            <div class="col-auto">
                <a href="{{ path('app_tenant_new') }}" class="btn btn-primary">
                    <i class="bi bi-person-plus"></i>
                    Nouveau locataire
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block body %}
<div class="container-fluid">
    <!-- Filtres de recherche -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="GET" class="row g-3">
                <div class="col-md-6">
                    <label for="search" class="form-label">Recherche</label>
                    <input type="text" class="form-control" id="search" name="search" 
                           value="{{ search }}" placeholder="Nom, email, téléphone...">
                </div>
                <div class="col-md-4">
                    <label for="status" class="form-label">Statut</label>
                    <select class="form-select" id="status" name="status">
                        <option value="">Tous les statuts</option>
                        <option value="active" {{ status == 'active' ? 'selected' : '' }}>Actif</option>
                        <option value="inactive" {{ status == 'inactive' ? 'selected' : '' }}>Inactif</option>
                        <option value="blacklisted" {{ status == 'blacklisted' ? 'selected' : '' }}>Liste noire</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-outline-primary w-100">
                        <i class="bi bi-search"></i>
                        Rechercher
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Actions rapides -->
    <div class="row mb-4">
        <div class="col-md-3">
            <a href="{{ path('app_tenant_active') }}" class="btn btn-outline-success w-100 mb-2">
                <i class="bi bi-person-check"></i>
                Locataires actifs
            </a>
        </div>
        <div class="col-md-3">
            <a href="{{ path('app_tenant_with_contracts') }}" class="btn btn-outline-info w-100 mb-2">
                <i class="bi bi-file-earmark-person"></i>
                Avec contrats
            </a>
        </div>
        <div class="col-md-3">
            <a href="?" class="btn btn-outline-secondary w-100 mb-2">
                <i class="bi bi-people"></i>
                Tous les locataires
            </a>
        </div>
        <div class="col-md-3">
            <a href="#" class="btn btn-outline-secondary w-100 mb-2">
                <i class="bi bi-download"></i>
                Exporter la liste
            </a>
        </div>
    </div>

    <!-- Liste des locataires -->
    {% if tenants|length > 0 %}
    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Nom complet</th>
                            <th>Contact</th>
                            <th>Âge</th>
                            <th>Profession</th>
                            <th>Revenus</th>
                            <th>Statut</th>
                            <th>Contrat actuel</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for tenant in tenants %}
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="avatar-circle me-3">
                                        {{ tenant.firstName|first|upper }}{{ tenant.lastName|first|upper }}
                                    </div>
                                    <div>
                                        <strong>{{ tenant.fullName }}</strong>
                                        <br>
                                        <small class="text-muted">{{ tenant.fullAddress }}</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div>
                                    <i class="bi bi-envelope"></i> {{ tenant.email }}
                                </div>
                                <div>
                                    <i class="bi bi-telephone"></i> {{ tenant.phone }}
                                </div>
                            </td>
                            <td>{{ tenant.age }} ans</td>
                            <td>
                                {% if tenant.profession %}
                                    {{ tenant.profession }}
                                    {% if tenant.employerName %}
                                        <br><small class="text-muted">{{ tenant.employerName }}</small>
                                    {% endif %}
                                {% else %}
                                    <span class="text-muted">Non renseigné</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if tenant.monthlyIncome %}
                                    {{ tenant.monthlyIncome|number_format(0, ',', ' ') }} €
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td>
                                <span class="badge bg-{{ tenant.status == 'active' ? 'success' : (tenant.status == 'blacklisted' ? 'danger' : 'secondary') }}">
                                    {% if tenant.status == 'active' %}Actif
                                    {% elseif tenant.status == 'inactive' %}Inactif
                                    {% elseif tenant.status == 'blacklisted' %}Liste noire
                                    {% else %}{{ tenant.status|title }}
                                    {% endif %}
                                </span>
                            </td>
                            <td>
                                {% set currentContract = tenant.currentContract %}
                                {% if currentContract %}
                                    <div>
                                        <strong>{{ currentContract.property.title }}</strong>
                                        <br>
                                        <small class="text-muted">
                                            {{ currentContract.rentAmount + currentContract.charges }} €/mois
                                        </small>
                                    </div>
                                {% else %}
                                    <span class="text-muted">Aucun</span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('app_tenant_show', {id: tenant.id}) }}" 
                                       class="btn btn-outline-primary btn-sm" title="Voir">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="{{ path('app_tenant_edit', {id: tenant.id}) }}" 
                                       class="btn btn-outline-secondary btn-sm" title="Modifier">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    {% if not currentContract %}
                                    <a href="{{ path('app_contract_new', {tenant_id: tenant.id}) }}" 
                                       class="btn btn-outline-success btn-sm" title="Créer un contrat">
                                        <i class="bi bi-plus"></i>
                                    </a>
                                    {% endif %}
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    {% else %}
    <div class="text-center py-5">
        <div class="mb-4">
            <i class="bi bi-people display-1 text-muted"></i>
        </div>
        <h4 class="text-muted">Aucun locataire trouvé</h4>
        <p class="text-muted mb-4">
            {% if search or status %}
                Aucun locataire ne correspond à vos critères de recherche.
            {% else %}
                Vous n'avez pas encore ajouté de locataire à votre base de données.
            {% endif %}
        </p>
        <div>
            {% if search or status %}
                <a href="{{ path('app_tenant_index') }}" class="btn btn-outline-primary me-2">
                    <i class="bi bi-arrow-clockwise"></i>
                    Effacer les filtres
                </a>
            {% endif %}
            <a href="{{ path('app_tenant_new') }}" class="btn btn-primary">
                <i class="bi bi-person-plus"></i>
                Ajouter un locataire
            </a>
        </div>
    </div>
    {% endif %}
</div>

<style>
.avatar-circle {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: var(--bs-primary);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 14px;
}
</style>
{% endblock %}