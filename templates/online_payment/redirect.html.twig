{% extends 'base.html.twig' %}

{% block title %}Redirection vers CinetPay - MYLOCCA{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white text-center">
                    <h4 class="mb-0">
                        <i class="bi bi-credit-card me-2"></i>
                        Redirection vers CinetPay
                    </h4>
                </div>
                <div class="card-body text-center py-5">
                    {% if payment_url %}
                        <div class="mb-4">
                            <div class="spinner-border text-success" role="status" style="width: 3rem; height: 3rem;">
                                <span class="visually-hidden">Chargement...</span>
                            </div>
                        </div>
                        <h5 class="mb-3">Redirection vers la plateforme de paiement...</h5>
                        <p class="text-muted mb-4">
                            <strong>Montant :</strong> {{ amount|currency }}<br>
                            <strong>Description :</strong> {{ description }}
                        </p>
                        <p class="text-muted small">
                            <i class="bi bi-info-circle me-1"></i>
                            Veuillez patienter, vous allez être redirigé automatiquement vers CinetPay.
                        </p>
                        <div class="mt-4">
                            <a href="{{ payment_url }}" class="btn btn-success btn-lg">
                                <i class="bi bi-arrow-right-circle me-2"></i>
                                Cliquez ici si la redirection ne fonctionne pas
                            </a>
                        </div>
                    {% else %}
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            <strong>Erreur de configuration</strong>
                            <p class="mb-0">URL de paiement non disponible. Veuillez réessayer.</p>
                        </div>
                        <div class="mt-4">
                            <a href="{{ path('app_payment_index') }}" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-2"></i>
                                Retour aux paiements
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

{% if payment_url %}
<script>
    // Redirection automatique après 2 secondes
    setTimeout(function() {
        window.location.href = '{{ payment_url|raw }}';
    }, 2000);
</script>
{% endif %}
{% endblock %}

