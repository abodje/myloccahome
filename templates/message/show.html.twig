{% extends 'base.html.twig' %}

{% block title %}{{ conversation.subject }} - Messagerie{% endblock %}

{% block page_title %}
    <h5 class="mb-0">
        <i class="bi bi-chat-dots me-2"></i>
        {{ conversation.subject }}
    </h5>
{% endblock %}

{% block page_actions %}
    <a href="{{ path('app_message_index') }}" class="btn btn-outline-secondary btn-sm">
        <i class="bi bi-arrow-left"></i> Retour
    </a>
{% endblock %}

{% block body %}
    <div class="row">
        <!-- Sidebar des conversations -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h6 class="mb-0">
                            <i class="bi bi-list-ul me-2"></i>
                            Conversations
                        </h6>
                        <a href="{{ path('app_message_new') }}" class="btn btn-primary btn-sm">
                            <i class="bi bi-plus"></i>
                        </a>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="conversation-list" style="max-height: 600px; overflow-y: auto;">
                        {% for conv in conversations %}
                            <a href="{{ path('app_message_show', {id: conv.id}) }}"
                               class="conversation-item d-block p-3 text-decoration-none text-dark border-bottom {{ conv.id == conversation.id ? 'active' : '' }}">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1 fw-bold">
                                            {{ conv.subject }}
                                            {% if conv.getUnreadCountForUser(app.user) > 0 %}
                                                <span class="badge bg-danger ms-1">{{ conv.getUnreadCountForUser(app.user) }}</span>
                                            {% endif %}
                                        </h6>
                                        <p class="mb-1 text-muted small">
                                            {% set lastMessage = conv.getLastMessage() %}
                                            {% if lastMessage %}
                                                {% if lastMessage.sender.id == app.user.id %}
                                                    <strong>Vous:</strong>
                                                {% else %}
                                                    <strong>{{ lastMessage.getSenderFullName() }}:</strong>
                                                {% endif %}
                                                {{ lastMessage.content|length > 30 ? lastMessage.content|slice(0, 30) ~ '...' : lastMessage.content }}
                                            {% endif %}
                                        </p>
                                        <small class="text-muted">
                                            {% if conv.lastMessageAt %}
                                                {{ conv.lastMessageAt|date('d/m H:i') }}
                                            {% endif %}
                                        </small>
                                    </div>
                                </div>
                            </a>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>

        <!-- Zone de conversation -->
        <div class="col-lg-8">
            <div class="card h-100">
                <!-- En-tête de la conversation -->
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-0">{{ conversation.subject }}</h6>
                            <small class="text-muted">
                                Participants: {{ conversation.getParticipantsNames() }}
                            </small>
                        </div>
                        <div>
                            <span class="badge bg-success">{{ conversation.getParticipants()|length }} participant{{ conversation.getParticipants()|length > 1 ? 's' : '' }}</span>
                        </div>
                    </div>
                </div>

                <!-- Messages -->
                <div class="card-body p-0">
                    <div class="messages-container" style="height: 400px; overflow-y: auto; padding: 1rem;">
                        {% if messages is empty %}
                            <div class="text-center text-muted py-5">
                                <i class="bi bi-chat-dots display-4"></i>
                                <p class="mt-2">Aucun message dans cette conversation</p>
                                <small>Soyez le premier à envoyer un message !</small>
                            </div>
                        {% else %}
                            {% for message in messages %}
                                <div class="message mb-3 d-flex {{ message.sender.id == app.user.id ? 'justify-content-end' : 'justify-content-start' }}">
                                    <div class="message-bubble {{ message.sender.id == app.user.id ? 'bg-primary text-white' : 'bg-light' }}"
                                         style="max-width: 70%; padding: 0.75rem; border-radius: 1rem;">
                                        {% if message.sender.id != app.user.id %}
                                            <div class="message-sender small mb-1 fw-bold">
                                                {{ message.getSenderFullName() }}
                                                <span class="badge bg-secondary ms-1">{{ message.getSenderRole() }}</span>
                                            </div>
                                        {% endif %}
                                        <div class="message-content">
                                            {{ message.content|nl2br }}
                                        </div>
                                        <div class="message-time small mt-1 {{ message.sender.id == app.user.id ? 'text-white-50' : 'text-muted' }}">
                                            {{ message.sentAt|date('d/m/Y H:i') }}
                                            {% if message.isRead and message.sender.id == app.user.id %}
                                                <i class="bi bi-check2-all ms-1"></i>
                                            {% elseif message.sender.id == app.user.id %}
                                                <i class="bi bi-check2 ms-1"></i>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        {% endif %}
                    </div>
                </div>

                <!-- Formulaire d'envoi -->
                <div class="card-footer">
                    {{ form_start(form, {'attr': {'class': 'd-flex gap-2'}}) }}
                        <div class="flex-grow-1">
                            {{ form_widget(form.content, {'attr': {'class': 'form-control', 'placeholder': 'Tapez votre message...'}}) }}
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-send"></i>
                        </button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

    <script>
        // Auto-scroll vers le bas des messages
        document.addEventListener('DOMContentLoaded', function() {
            const messagesContainer = document.querySelector('.messages-container');
            if (messagesContainer) {
                messagesContainer.scrollTop = messagesContainer.scrollHeight;
            }
        });

        // Auto-refresh des messages toutes les 30 secondes
        setInterval(function() {
            // Ici on pourrait ajouter une requête AJAX pour récupérer les nouveaux messages
        }, 30000);
    </script>

    <style>
        .message-bubble {
            border-radius: 1rem;
            word-wrap: break-word;
        }

        .message-bubble.bg-primary {
            border-bottom-right-radius: 0.25rem;
        }

        .message-bubble.bg-light {
            border-bottom-left-radius: 0.25rem;
            border: 1px solid #dee2e6;
        }

        .messages-container::-webkit-scrollbar {
            width: 6px;
        }

        .messages-container::-webkit-scrollbar-track {
            background: #f1f1f1;
        }

        .messages-container::-webkit-scrollbar-thumb {
            background: #c1c1c1;
            border-radius: 3px;
        }
    </style>
{% endblock %}
