{% extends 'base.html.twig' %}

{% block title %}Nouvelle conversation - Messagerie{% endblock %}

{% block page_title %}
    <h5 class="mb-0">
        <i class="bi bi-plus-circle me-2"></i>
        Nouvelle conversation
    </h5>
{% endblock %}

{% block page_actions %}
    <a href="{{ path('app_message_index') }}" class="btn btn-outline-secondary btn-sm">
        <i class="bi bi-arrow-left"></i> Retour
    </a>
{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-chat-dots me-2"></i>
                        Créer une nouvelle conversation
                    </h6>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.subject) }}
                            {{ form_widget(form.subject) }}
                            {{ form_errors(form.subject) }}
                            <div class="form-text">
                                Choisissez un sujet clair pour votre conversation
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.participants) }}
                            {{ form_widget(form.participants) }}
                            {{ form_errors(form.participants) }}
                            <div class="form-text">
                                Sélectionnez les personnes avec qui vous souhaitez converser
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-chat-dots me-2"></i>
                                Créer la conversation
                            </button>
                            <a href="{{ path('app_message_index') }}" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-2"></i>
                                Annuler
                            </a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>

            <!-- Conseils -->
            <div class="card mt-3">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-lightbulb me-2"></i>
                        Conseils
                    </h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2">
                            <i class="bi bi-check-circle text-success me-2"></i>
                            Utilisez un sujet descriptif pour faciliter la recherche
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle text-success me-2"></i>
                            Ajoutez uniquement les personnes concernées par le sujet
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle text-success me-2"></i>
                            Vous pouvez ajouter d'autres participants plus tard
                        </li>
                        <li>
                            <i class="bi bi-check-circle text-success me-2"></i>
                            Toutes les conversations sont privées et sécurisées
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
