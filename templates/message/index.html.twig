{% extends 'base.html.twig' %}

{% block title %}Messagerie - LOKAPRO{% endblock %}

{% block page_title %}
    <h5 class="mb-0">
        <i class="bi bi-chat-dots me-2"></i>
        Messagerie
    </h5>
{% endblock %}

{% block page_actions %}
    <a href="{{ path('app_message_new') }}" class="btn btn-primary btn-sm">
        <i class="bi bi-plus-circle"></i> Nouvelle conversation
    </a>
{% endblock %}

{% block body %}
    <div class="row">
        <!-- Sidebar des conversations -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h6 class="mb-0">
                            <i class="bi bi-list-ul me-2"></i>
                            Conversations
                        </h6>
                        <span class="badge bg-primary">{{ conversations|length }}</span>
                    </div>
                </div>
                <div class="card-body p-0">
                    <!-- Filtres -->
                    <div class="p-3 border-bottom">
                        <form method="GET" class="d-flex gap-2">
                            <input type="text" name="search" class="form-control form-control-sm"
                                   placeholder="Rechercher..." value="{{ current_search }}">
                            <select name="status" class="form-select form-select-sm">
                                <option value="">Tous les statuts</option>
                                <option value="unread" {{ current_status == 'unread' ? 'selected' : '' }}>Non lus</option>
                                <option value="active" {{ current_status == 'active' ? 'selected' : '' }}>Actives</option>
                            </select>
                            <button type="submit" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-search"></i>
                            </button>
                        </form>
                    </div>

                    <!-- Liste des conversations -->
                    <div class="conversation-list" style="max-height: 600px; overflow-y: auto;">
                        {% if conversations is empty %}
                            <div class="p-4 text-center text-muted">
                                <i class="bi bi-chat-dots display-4"></i>
                                <p class="mt-2 mb-0">Aucune conversation</p>
                                <small>Commencez une nouvelle conversation</small>
                            </div>
                        {% else %}
                            {% for conversation in conversations %}
                                <a href="{{ path('app_message_show', {id: conversation.id}) }}"
                                   class="conversation-item d-block p-3 text-decoration-none text-dark border-bottom">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1 fw-bold">
                                                {{ conversation.subject }}
                                                {% if conversation.getUnreadCountForUser(app.user) > 0 %}
                                                    <span class="badge bg-danger ms-1">{{ conversation.getUnreadCountForUser(app.user) }}</span>
                                                {% endif %}
                                            </h6>
                                            <p class="mb-1 text-muted small">
                                                {% set lastMessage = conversation.getLastMessage() %}
                                                {% if lastMessage %}
                                                    {% if lastMessage.sender.id == app.user.id %}
                                                        <strong>Vous:</strong>
                                                    {% else %}
                                                        <strong>{{ lastMessage.getSenderFullName() }}:</strong>
                                                    {% endif %}
                                                    {{ lastMessage.content|length > 50 ? lastMessage.content|slice(0, 50) ~ '...' : lastMessage.content }}
                                                {% else %}
                                                    <em>Aucun message</em>
                                                {% endif %}
                                            </p>
                                            <small class="text-muted">
                                                {% if conversation.lastMessageAt %}
                                                    {{ conversation.lastMessageAt|date('d/m/Y H:i') }}
                                                {% else %}
                                                    {{ conversation.createdAt|date('d/m/Y H:i') }}
                                                {% endif %}
                                            </small>
                                        </div>
                                        <div class="ms-2">
                                            {% if conversation.getUnreadCountForUser(app.user) > 0 %}
                                                <i class="bi bi-circle-fill text-primary"></i>
                                            {% endif %}
                                        </div>
                                    </div>
                                </a>
                            {% endfor %}
                        {% endif %}
                    </div>
                </div>
            </div>

            <!-- Statistiques -->
            <div class="card mt-3">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-graph-up me-2"></i>
                        Statistiques
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <div class="border-end">
                                <h4 class="text-primary mb-1">{{ stats.total_conversations }}</h4>
                                <small class="text-muted">Total</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <h4 class="text-success mb-1">{{ stats.active_conversations }}</h4>
                            <small class="text-muted">Actives</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Zone principale -->
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body text-center">
                    <i class="bi bi-chat-dots display-1 text-muted"></i>
                    <h4 class="mt-3 text-muted">Sélectionnez une conversation</h4>
                    <p class="text-muted">Choisissez une conversation dans la liste à gauche ou créez-en une nouvelle.</p>
                    <a href="{{ path('app_message_new') }}" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-2"></i>
                        Nouvelle conversation
                    </a>
                </div>
            </div>
        </div>
    </div>

    <style>
        .conversation-item:hover {
            background-color: #f8f9fa;
        }

        .conversation-item.active {
            background-color: #e3f2fd;
            border-left: 4px solid #2196f3;
        }
    </style>
{% endblock %}
