{% extends 'base.html.twig' %}

{% block title %}Nouveau propriétaire - MYLOCCA{% endblock %}

{% block page_title %}
    <h5 class="mb-0">
        <i class="bi bi-person-badge me-2"></i>
        Nouveau propriétaire
    </h5>
{% endblock %}

{% block page_actions %}
    <a href="{{ path('app_owner_index') }}" class="btn btn-outline-secondary btn-sm">
        <i class="bi bi-arrow-left me-2"></i>
        Retour à la liste
    </a>
{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header" style="background-color: var(--primary-color); color: white;">
                    <h6 class="mb-0">
                        <i class="bi bi-plus-circle me-2"></i>
                        Créer un nouveau propriétaire
                    </h6>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                    
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            {{ form_row(form.ownerType) }}
                        </div>
                    </div>

                    <h6 class="border-bottom pb-2 mb-3">Informations personnelles</h6>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.firstName) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.lastName) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.email) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.phone) }}
                        </div>
                    </div>

                    <h6 class="border-bottom pb-2 mb-3 mt-4">Adresse</h6>

                    <div class="mb-3">
                        {{ form_row(form.address) }}
                    </div>

                    <div class="row">
                        <div class="col-md-8 mb-3">
                            {{ form_row(form.city) }}
                        </div>
                        <div class="col-md-4 mb-3">
                            {{ form_row(form.postalCode) }}
                        </div>
                    </div>

                    <h6 class="border-bottom pb-2 mb-3 mt-4">Informations complémentaires</h6>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.siret) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.commissionRate) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.bankAccount) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.notes) }}
                    </div>

                    {{ form_rest(form) }}

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a href="{{ path('app_owner_index') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-2"></i>
                            Annuler
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-2"></i>
                            Créer le propriétaire
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>

            <!-- Aide -->
            <div class="card mt-3">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>
                        Aide
                    </h6>
                </div>
                <div class="card-body">
                    <p><strong>Types de propriétaires :</strong></p>
                    <ul>
                        <li><strong>Particulier :</strong> Personne physique possédant des biens immobiliers</li>
                        <li><strong>SCI :</strong> Société Civile Immobilière</li>
                        <li><strong>SARL, SA, SAS :</strong> Sociétés commerciales</li>
                    </ul>
                    <p class="mb-0"><strong>Note :</strong> Le taux de commission est optionnel et peut être défini par propriétaire pour calculer automatiquement vos honoraires de gestion.</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .form-label {
            font-weight: 500;
            color: #495057;
        }
        
        h6.border-bottom {
            color: var(--primary-color);
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Masquer/afficher le champ SIRET selon le type
        document.addEventListener('DOMContentLoaded', function() {
            const ownerTypeSelect = document.querySelector('select[name*="[ownerType]"]');
            const siretField = document.querySelector('input[name*="[siret]"]');
            
            if (ownerTypeSelect && siretField) {
                const siretRow = siretField.closest('.mb-3');
                
                function toggleSiretField() {
                    if (ownerTypeSelect.value === 'Particulier') {
                        siretRow.style.display = 'none';
                    } else {
                        siretRow.style.display = 'block';
                    }
                }
                
                ownerTypeSelect.addEventListener('change', toggleSiretField);
                toggleSiretField(); // Initial call
            }
        });
    </script>
{% endblock %}

