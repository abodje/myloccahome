{% extends 'base.html.twig' %}

{% block title %}Propriétaires - MYLOCCA{% endblock %}

{% block page_title %}
    <h5 class="mb-0">
        <i class="bi bi-person-badge me-2"></i>
        Propriétaires de biens immobiliers
    </h5>
{% endblock %}

{% block page_actions %}
    <a href="{{ path('app_owner_new') }}" class="btn btn-primary btn-sm">
        <i class="bi bi-plus-circle me-2"></i>
        Nouveau propriétaire
    </a>
{% endblock %}

{% block body %}
    <!-- Statistiques -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted mb-2">Total Propriétaires</h6>
                    <h3 class="text-primary mb-0">{{ stats.total }}</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted mb-2">Particuliers</h6>
                    <h3 class="text-success mb-0">{{ stats.particuliers }}</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted mb-2">Sociétés</h6>
                    <h3 class="text-info mb-0">{{ stats.societes }}</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtres et recherche -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="GET" class="row g-3">
                <div class="col-md-6">
                    <input type="text" name="search" class="form-control" placeholder="Rechercher par nom ou email..." value="{{ current_search }}">
                </div>
                <div class="col-md-4">
                    <select name="type" class="form-select">
                        <option value="">Tous les types</option>
                        <option value="Particulier" {{ current_type == 'Particulier' ? 'selected' : '' }}>Particulier</option>
                        <option value="SCI" {{ current_type == 'SCI' ? 'selected' : '' }}>SCI</option>
                        <option value="SARL" {{ current_type == 'SARL' ? 'selected' : '' }}>SARL</option>
                        <option value="SA" {{ current_type == 'SA' ? 'selected' : '' }}>SA</option>
                        <option value="SAS" {{ current_type == 'SAS' ? 'selected' : '' }}>SAS</option>
                        <option value="Société" {{ current_type == 'Société' ? 'selected' : '' }}>Autre société</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex gap-2">
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="bi bi-search"></i> Filtrer
                    </button>
                    <a href="{{ path('app_owner_index') }}" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Liste des propriétaires -->
    <div class="card shadow">
        <div class="card-header" style="background-color: var(--primary-color); color: white;">
            <h6 class="mb-0">
                <i class="bi bi-list me-2"></i>
                Liste des propriétaires ({{ owners|length }})
            </h6>
        </div>
        <div class="card-body p-0">
            {% if owners|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Nom complet</th>
                                <th>Type</th>
                                <th>Contact</th>
                                <th>Propriétés</th>
                                <th>Commission</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for owner in owners %}
                            <tr>
                                <td>
                                    <strong>{{ owner.fullName }}</strong>
                                    {% if owner.siret %}
                                        <br><small class="text-muted">SIRET: {{ owner.siret }}</small>
                                    {% endif %}
                                </td>
                                <td>
                                    <span class="badge bg-{{ owner.ownerType == 'Particulier' ? 'success' : 'info' }}">
                                        {{ owner.ownerType }}
                                    </span>
                                </td>
                                <td>
                                    <i class="bi bi-envelope me-1"></i>{{ owner.email }}<br>
                                    {% if owner.phone %}
                                        <i class="bi bi-telephone me-1"></i>{{ owner.phone }}
                                    {% endif %}
                                </td>
                                <td>
                                    <span class="badge bg-primary">{{ owner.properties|length }} bien(s)</span>
                                    {% if owner.activePropertiesCount > 0 %}
                                        <br><small class="text-success">{{ owner.activePropertiesCount }} actif(s)</small>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if owner.commissionRate %}
                                        {{ owner.commissionRate }}%
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                </td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm">
                                        <a href="{{ path('app_owner_show', {'id': owner.id}) }}" class="btn btn-outline-primary" title="Voir">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="{{ path('app_owner_edit', {'id': owner.id}) }}" class="btn btn-outline-warning" title="Modifier">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="text-center p-5">
                    <i class="bi bi-person-badge display-1 text-muted"></i>
                    <h5 class="mt-3 text-muted">Aucun propriétaire trouvé</h5>
                    <p class="text-muted">Commencez par créer votre premier propriétaire de bien immobilier.</p>
                    <a href="{{ path('app_owner_new') }}" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-2"></i>
                        Nouveau propriétaire
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .table td {
            vertical-align: middle;
        }
    </style>
{% endblock %}

